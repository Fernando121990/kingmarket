@model IEnumerable<MarketASP.Models.CONFIGURACION>


@{
    ViewBag.Title = "General";
    ViewBag.pTitle = "General";
    ViewBag.pageTitle = "Configuracion";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-success mb-2"><i class="mdi mdi-plus me-2"></i> Agregar Configuración</a>
                </div>
                <div class="table-responsive mt-3">
                    <table id="datatable" class="table table-centered datatable dt-responsive nowrap " style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-light">
                            <tr>
                                <th>Cod.</th>
                                <th>
                                    Tipo
                                </th>
                                <th>
                                    Descripción
                                </th>
                                <th>
                                    Valor
                                </th>
                                <th>
                                    Activo
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(t => t.ntipo_confi))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ntipo_confi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.stipo_confi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sdesc_confi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.svalor_confi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.besta_confi)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = item.ncode_confi })" class="me-3 text-primary" data-bs-container="#tooltip-container3" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar"><i class="mdi mdi-pencil font-size-18"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->