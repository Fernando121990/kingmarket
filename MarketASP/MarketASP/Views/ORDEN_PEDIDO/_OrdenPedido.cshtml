                        <input id="ndctoex_orpe" name="ndctoex_orpe" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="nsubex_orpe" name="nsubex_orpe" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="nigvex_orpe" name="nigvex_orpe" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="ntotaex_orpe" name="ntotaex_orpe" type="text" class="form-control" readonly />
                    </td>
                    <td rowspan="2">
                        <input id="ntotal_orpe" name="ntotal_orpe" type="text" class="form-control" readonly />
                    </td>
                </tr>
                <tr>
                    <td>Afecto</td>
                    <td>
                        <input id="nbrutoaf_orpe" name="nbrutoaf_orpe" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="ndsctoaf_orpe" name="ndsctoaf_orpe" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="nsubaf_orpe" name="nsubaf_orpe" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="nigvaf_orpe" name="nigvaf_orpe" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="ntotaaf_orpe" name="ntotaaf_orpe" type="text" class="form-control" readonly />
                    </td>

                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="text-center mt-4">
    <button id="btnorpe" name="btnorpe" type="button" class="btn btn-primary me-2 waves-effect waves-light">Guardar Cambios</button>
</div>
<div class="row">
    <div class="text-center">
        <button id="btnpro" name="btnpro" class="btn btn-block  btn-outline-warning" type="button">PROCESANDO DATOS ...</button>
    </div>
</div>