@model MarketASP.Models.ORDEN_PEDIDOS

<div>
    <a href="@Url.Action("Index")" class="btn btn-success mb-2"><i class="mdi mdi-plus me-2"></i>Regresar</a>
</div>

<div class="row">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col mb-3">
                        <label for="example-text-input" class="col-form-label">Cliente</label>
                        <input id="COD_CLIENTE" name="COD_CLIENTE" type="hidden" value="@ViewBag.cod_cliente" />
                        <input id="sdesc_cliente" name="sdesc_cliente" type="text" value="@ViewBag.sdesc_cliente" class="form-control" placeholder="Ingrese Cliente" autofocus />
                        @Html.ValidationMessageFor(model => model.ncode_cliente, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-auto mt-4">
                        <a href="@Url.Action("Create","Clientes")" class="btn btn-success" target="_blank"><i class="fa fa-user"></i></a>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="example-text-input" class="col-form-label">Dirección</label>
                    <select id="NRO_DCLIENTE" name="NRO_DCLIENTE" class="form-control"></select>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="sruc_cliente" class="col-form-label">RUC</label>
                            <input id="sruc_cliente" name="sruc_cliente" type="text" value="@ViewBag.sruc_cliente" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="sorpeorma_compra" class="col-form-label">DNI</label>
                            <div>
                                <input id="sdni_cliente" name="sdni_cliente" type="text" value="@ViewBag.sdni_cliente" class="form-control" placeholder="DNI" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-5">
                        <div class="mb-3">
                            <label for="example-text-input" class="col-form-label">Documento</label>
                            @Html.DropDownList("ncode_docu", null, htmlAttributes: new { @class = "form-select" })
                            @Html.ValidationMessageFor(model => model.ncode_docu, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label for="sseri_orpe" class="col-form-label">Serie</label>
                            @Html.EditorFor(model => model.sseri_orpe, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.sseri_orpe, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="snume_orpe" class="col-form-label">Número</label>
                            <div>
                                @Html.EditorFor(model => model.snume_orpe, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.snume_orpe, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="dfeorpeo_orpe" class="col-form-label">F.Emision</label>
                            <input id="dfeorpeo_orpe" name="dfeorpeo_orpe" type="text" value="@ViewBag.dfeorpeo_orpe" class="dfech form-control" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="dfevenci_orpe" class="col-form-label">F.Venc</label>
                            <div>
                                <input id="dfevenci_orpe" name="dfevenci_orpe" type="text" value="@ViewBag.dfevenci_orpe" class="dfech form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="dfdespacho_orpe" class="col-form-label">F.Despacho</label>
                            <div>
                                <input id="dfdespacho_orpe" name="dfdespacho_orpe" type="text" value="@ViewBag.dfdespacho_orpe" class="dfech form-control" />
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="ncode_fopago" class="col-form-label">F.Pago</label>
                            <select id="nro_fopago" name="nro_fopago" class="form-control"></select>
                            @*@Html.DropDownList("ncode_fopago", null, htmlAttributes: new { @class = "form-select" })*@
                            @Html.ValidationMessageFor(model => model.ncode_fopago, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="smone_orpe" class="col-form-label">Moneda</label>
                            <div>
                                @Html.DropDownList("smone_orpe", null, htmlAttributes: new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.smone_orpe, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="ntc_orpe" class="col-form-label">T.C</label>
                            <div>
                                <input id="ntc_orpe" style="width:10em" name="ntc_orpe" class="form-control" type="text" value="@ViewBag.tc" readonly />
                                @Html.ValidationMessageFor(model => model.ntc_orpe, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="ncode_alma" class="col-form-label">Almacen</label>
                            @Html.DropDownList("ncode_alma", null, htmlAttributes: new { @class = "form-select" })
                            @*@Html.DropDownList("ncode_alma", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })*@
                            @*@Html.HiddenFor(model => model.ncode_alma)*@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="ncode_compra" class="col-form-label">O.C</label>
                            @Html.EditorFor(model => model.scode_compra, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.scode_compra, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">

                <div class="row">
                    <div class="mb-3">
                        <label for="ncode_vende" class="col-form-label">vendedor</label>
                        @Html.DropDownList("ncode_vende", null, htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.ncode_vende, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
<div class="row">
    <div class="mb-3">
        <label for="sobse_venta" class="col-form-label">Observacion</label>
        @Html.EditorFor(model => model.sobse_orpe, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.sobse_orpe, "", new { @class = "text-danger" })
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <p>Productos</p>
    </div>
    <div class="col-lg-6">
        <button type="button" title="Agregar Articulo" class="addMat fas fa-file btn btn-info" data-bs-toggle="modal" data-bs-target="#modalMat"></button>
        <button type="button" title="Elimnar Articulo" class="delMat fas fa-trash-alt btn btn-warning"></button>
        <button type="button" title="Ver Almacenes" class="btnalma fas fa-home btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#modalAlma"></button>
        <button type="button" title="Ver Precios" class="btnpedidos fas fa-money-check btn btn-info" data-bs-toggle="modal" data-bs-target="#modalprecio"></button>
        <div id="modalMat" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalMatlabel" aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 Class="modal-title" id="modalMatlabel">Seleccionar Articulo</h5>
                        <button id="btnmatcerrar" type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <table id="matetabla" class="table dt-responsive nowrap w-100" style="font-size: 12px">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Id</th>
                                    <th>Código</th>
                                    <th>Descripción</th>
                                    <th>Stock</th>
                                    <th>Disponible</th>
                                    <th>Transito</th>
                                    <th>U.M</th>
                                    <th>Precio</th>
                                    <th>CodUM</th>
                                    <th>bafecto</th>
                                    <th>bisc</th>
                                    <th>bdscto</th>
                                    <th>bicbper</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div Class="modal-footer">
                        <button id="btncerrar" name="btncerrar" type="button" class="btn btn-light waves-effect" data-bs-dismiss="modal">Cerrar</button>
                        <button id="btnmate" name="btnmate" type="button" class="btn btn-primary waves-effect waves-light">Añadir</button>
                    </div>
                </div>
            </div>
        </div>

        <div id="modalAlma" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalAlmalabel" aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 Class="modal-title" id="modalAlmalabel">Almacen - detalle</h5>
                        <button id="btnalmacerrarx" name="btnalmacerrarx" type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <table id="almatabla" class="table dt-responsive nowrap w-100" style="font-size: 12px">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Almacen</th>
                                    <th>Nombre</th>
                                    <th>Stock</th>
                                    <th>Disponible</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div Class="modal-footer">
                        <button id="btnalmacencerrar" name="btnalmacencerrar" type="button" class="btn btn-light waves-effect" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>


        <div id="modalprecio" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalpreciolabel" aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 Class="modal-title" id="modalpreciolabel">Ordenes de Pedido</h5>
                        <button id="btnpreciocerrarx" name="btnpreciocerrarx" type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <table id="preciotabla" class="table dt-responsive nowrap w-100" style="font-size: 12px">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Fecha</th>
                                    <th>Documento</th>
                                    <th>Cantidad</th>
                                    <th>Precio</th>
                                    <th>Vendedor</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div Class="modal-footer">
                        <button id="btnpreciocerrar" name="btnpreciocerrar" type="button" class="btn btn-light waves-effect" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <Table id="tbl" class="table table-striped table-responsive-lg" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th>CodArt</th>
                    <th>Codigo</th>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>UM</th>
                    <th>Precio</th>
                    <th>Precio</th>
                    <th>M</th>
                    <th>bafecto</th>
                    <th>bisc</th>
                    <th>bdscto</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model.ORDEN_PEDIDOS_DETALLE)
                    {
                        var currentItem = item;
                        <tr>
                            <td>@Html.DisplayTextFor(x => currentItem.ARTICULO.ncode_arti)</td>
                            <td>@Html.DisplayTextFor(x => currentItem.ARTICULO.scode_arti)</td>
                            <td>@Html.DisplayTextFor(x => currentItem.ARTICULO.sdesc1_arti)</td>
                            <td>@Html.DisplayTextFor(x => currentItem.ncant_orpedeta)</td>
                            <td>@Html.DisplayTextFor(x => currentItem.ARTICULO.UMEDIDA.sdesc_umed)</td>
                            <td>@Html.DisplayTextFor(x => currentItem.npu_orpedeta)</td>
                            <td>@Html.DisplayTextFor(x => currentItem.npuorigen_orpedeta)</td>
                            <td></td>
                            <td>@Html.DisplayTextFor(x => currentItem.ARTICULO.bafecto_arti)</td>
                            <td>@Html.DisplayTextFor(x => currentItem.ARTICULO.bisc_arti)</td>
                            <td>@Html.DisplayTextFor(x => currentItem.ARTICULO.bdscto_arti)</td>
                            <td>@Html.DisplayTextFor(x => currentItem.nsubt_orpedeta)</td>
                        </tr>

                    }
                }
            </tbody>
        </Table>
    </div>
</div>

