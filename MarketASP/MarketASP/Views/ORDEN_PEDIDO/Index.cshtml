@model IEnumerable<MarketASP.Models.ORDEN_PEDIDOS>

@{
    ViewBag.Title = "Consultar";
    ViewBag.pTitle = "Consultar";
    ViewBag.pageTitle = "Orden de Pedido";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-success mb-2"><i class="mdi mdi-plus me-2"></i> Agregar Orden Pedido</a>
                </div>
                <div class="table-responsive mt-3">
                    <table id="datatable" class="table table-centered datatable dt-responsive nowrap" data-bs-page-length="5" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-light">
                            <tr>
                                @*<th>
                                    Doc.
                                </th>*@
                                <th>
                                    Cliente
                                </th>
                                <th>
                                    No Doc.
                                </th>
                                <th>
                                    F.Venta
                                </th>
                                <th>
                                    F.Vcto
                                </th>
                                @*<th>
                                    TC
                                </th>*@
                                <th>
                                    M
                                </th>
                                <th>
                                    Total
                                </th>
                                <th>Activa</th>
                                <th>Venta</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<td>
            @Html.DisplayFor(modelItem => item.CONFIGURACION.sdesc_confi)
        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CLIENTE.srazon_cliente)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sseri_orpe) - @Html.DisplayFor(modelItem => item.snume_orpe)
                                    </td>
                                    <td>
                                        @string.Format("{0:d}", item.dfeorpeo_orpe)
                                    </td>
                                    <td>
                                        @string.Format("{0:d}", item.dfevenci_orpe)
                                    </td>
                                    @*<td>
            @Html.DisplayFor(modelItem => item.ntc_orpe)
        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.smone_orpe)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ntotal_orpe)
                                    </td>
                                    <td>
                                        @if (item.besta_orpe == false)
                                        {
                                            <div class="badge badge-soft-warning font-size-12">No</div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-soft-success font-size-12">Si</div>
                                        }
                                    </td>
                                    <td>
                                        @if (item.bventa_orpe == false)
                                        {
                                            <div class="badge badge-soft-warning font-size-12">No</div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-soft-success font-size-12">Si</div>
                                        }
                                    </td>
                                    @*@Html.DisplayFor(modelItem => item.CONFIGURACION1.sdesc_confi)*@
                                    <td>
                                        @if (item.besta_orpe == true && item.bventa_orpe == false)
                                        {
                                            <a href="@Url.Action("Edit", new { id = item.ncode_orpe })" class="btn btn-success btn-circle btn-sm" title="Edita">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        @if (item.besta_orpe == true && item.bventa_orpe == false)
                                        {
                                            <a href="@Url.Action("DeleteOrden_Pedido", new { id = item.ncode_orpe })" class="btn btn-danger btn-circle btn-sm" title="Eliminar" onclick="return confirm('¿ Seguro de eliminar registro ?');">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->