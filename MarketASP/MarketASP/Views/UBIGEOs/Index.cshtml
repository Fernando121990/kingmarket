@model IEnumerable<MarketASP.Models.UBIGEO>

@{
    ViewBag.Title = "Lista de Ubigeo";
}

<div class="row ptp-titulos" style="margin-top:5px">
    <div class="col-md-6 col-sm-6">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="col-md-6 col-sm-6">
        @Html.ActionLink(" ", "Create", new { }, new { @class = "btn btn-primary glyphicon glyphicon-file", title = "Añadir Ubigeo" })
    </div>
</div>
<table class="table table-striped">
    <tr>
        <th>
            Departamento
        </th>
        <th>
            Provincia
        </th>
        <th>
            Distrito
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.sdepa_ubigeo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sprovi_ubigeo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sdistri_ubigeo)
        </td>
    </tr>
}

</table>
