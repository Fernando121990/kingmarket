@model IEnumerable<MarketASP.Models.Pr_KardexArticulos_Result>

@{
    ViewBag.Title = "Stock";
    ViewBag.pTitle = "Stock";
    ViewBag.pageTitle = "Inventario";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive mt-3">
                    <table id="datatable" class="table table-centered datatable dt-responsive nowrap " style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-light">
                            <tr>
                                <th>
                                    <label>Almacen</label>
                                </th>
                                <th>
                                    <label>Cod</label>
                                </th>
                                <th>
                                    <label>Articulo</label>
                                </th>
                                <th>
                                    <label>Ingreso</label>
                                </th>
                                <th>
                                    <label>Salidas</label>
                                </th>
                                <th>
                                    <label>Stock</label>
                                </th>
                                <th>
                                    <label>Reserva</label>
                                </th>
                                <th>Disponible</th>
                                <th>Transito</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderByDescending(X => X.sdesc1_arti))
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sdesc_alma)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ncode_arti)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sdesc1_arti)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.INGRESOS)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SALIDAS)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.STOCK)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RESERVADO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DISPONIBLE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TRANSITO)
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->
