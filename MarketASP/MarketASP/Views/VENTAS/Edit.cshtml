@model MarketASP.Models.VENTAS

@{
    /**/

    ViewBag.Title = "Actualizar Venta";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ncode_venta)

        <div class="form-group ptp-subtitulos">
            <div class="col-md-12">
                <h4 class="text-center">@ViewBag.Title</h4>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dfeventa_venta, "Fecha", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-1">
                <input id="dfeventa_venta" style="width:6em" name="dfeventa_venta" type="text" class="dfech" value="@string.Format("{0:d}",Model.dfeventa_venta)" />
                @Html.ValidationMessageFor(model => model.dfeventa_venta, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.dfevenci_venta, "Vcto", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-1">
                <input id="dfevenci_venta" style="width:6em" name="dfevenci_venta" type="text" class="dfech" value="@string.Format("{0:d}",Model.dfevenci_venta)" readonly />
                @Html.ValidationMessageFor(model => model.dfevenci_venta, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.smone_venta, "Moneda", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-1 col-sm-1">
                @Html.DropDownList("smone_venta")
                @Html.ValidationMessageFor(model => model.smone_venta, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.ntc_venta, "TC", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-1">
                <input id="ntc_venta" style="width:6em" name="ntc_venta" type="text" value="@Model.ntc_venta" readonly />
                @Html.ValidationMessageFor(model => model.ntc_venta, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.ncode_fopago, "F.Pago", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.DropDownList("ncode_fopago", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ncode_fopago, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2">Almacen</label>
            <div class="col-md-3">
                @Html.DropDownList("ncode_alma", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ncode_docu, "Documento", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-2  col-sm-2">
                @Html.DropDownList("ncode_docu", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ncode_docu, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.sseri_venta, "No Doc", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-1">
                @Html.EditorFor(model => model.sseri_venta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sseri_venta, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.EditorFor(model => model.snume_venta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.snume_venta, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-1">
                <label for="ncode_cliente" class="col-form-label">Cliente</label>
            </div>
            <div class="col-md-5">
                <input id="COD_CLIENTE" name="COD_CLIENTE" type="hidden" value="@Model.ncode_cliente" />
                <input id="sdesc_cliente" name="sdesc_cliente" type="text" class="form-control" value="@ViewBag.sdesc_cliente" />
                @Html.ValidationMessageFor(model => model.ncode_cliente, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-1">
                <span Class="addCliente glyphicon glyphicon-file btn btn-default" data-toggle="modal" data-target="#modalCliente"></span>
            </div>
            @Html.LabelFor(model => model.ncode_clidire, "Dirección", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-4">
                @Html.DropDownList("NRO_DCLIENTE", null, htmlAttributes: new { @class = "form-control" })
                @*<select id="NRO_DCLIENTE" name="NRO_DCLIENTE"></select>*@
            </div>
        </div>
        <div class="form-group">
            <div Class="modal fade" id="modalCliente" role="dialog">
                <div Class="modal-dialog">
                    <div Class="modal-content">
                        <div Class="modal-header">
                            <Button type="button" Class="close" data-dismiss="modal">&times;</Button>
                            <h4 Class="modal-title">Nuevo Cliente</h4>
                        </div>
                        <div Class="modal-body">
                            <div class="form-group">
                                <div class="col-md-12">
                                    Persona Juridica
                                    <input id="stipo_cliente" name="stipo_cliente" type="radio" value="J" checked="checked" />
                                    Persona Natural
                                    <input id="stipo_cliente" name="stipo_cliente" type="radio" value="N" />
                                </div>
                            </div>
                            <div class="form-group natural">
                                <label class="col-md-1">Nombres</label>
                                <div class="col-md-11">
                                    <input id="snomb_cliente" name="snomb_cliente" type="text" class="form-control" maxlength="20" />
                                </div>
                            </div>
                            <div class="form-group natural">
                                <label class="col-md-1">A.Paterno</label>
                                <div class="col-md-5">
                                    <input id="sappa_cliente" name="sappa_cliente" type="text" class="form-control" maxlength="20" />
                                </div>
                                <label class="col-md-1">A.Materno</label>
                                <div class="col-md-5">
                                    <input id="sapma_cliente" name="sapma_cliente" type="text" class="form-control" maxlength="20" />
                                </div>
                            </div>
                            <div class="form-group juridica">
                                <label class="col-md-1">Razón Social</label>
                                <div class="col-md-11">
                                    <input id="srazon_cliente" name="srazon_cliente" type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-1">RUC</label>
                                <div class="col-md-5">
                                    <input id="sruc_cliente" name="sruc_cliente" type="text" class="form-control" maxlength="11" />
                                </div>
                                <label class="col-md-1">DNI</label>
                                <div class="col-md-5">
                                    <input id="sdnice_cliente" name="sdnice_cliente" type="text" class="form-control" maxlength="14" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2">Dirección</label>
                                <div class="col-md-10">
                                    <input id="sdire_cliente" name="sdire_cliente" type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2">Ubicación</label>
                                <div class="col-md-10">
                                    <input id="scode_ubigeo" name="scode_ubigeo" type="text" />
                                    <input id="subigeo" name="subigeo" type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-1">Telefono</label>
                                <div class="col-md-5">
                                    <input id="sfono1_cliente" name="sfono1_cliente" type="tel" class="form-control" />
                                </div>
                                <label class="col-md-1">Correo</label>
                                <div class="col-md-5">
                                    <input id="smail_cliente" name="smail_cliente" type="email" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-1">Contacto</label>
                                <div class="col-md-5">
                                    <input id="srepre_cliente" name="srepre_cliente" type="text" class="form-control" />
                                </div>
                                <label class="col-md-1">Telefono</label>
                                <div class="col-md-5">
                                    <input id="sfono2_cliente" name="sfono2_cliente" type="tel" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div Class="modal-footer">
                            <Button id="btnCliente" name="btnCliente" type="button" Class="btn btn-default">Añadir</Button>
                            <Button id="btnCliCierre" name="btnCliCierre" type="button" Class="btn btn-default" data-dismiss="modal">Cerrar</Button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ncode_compra, "O.C", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.ncode_compra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ncode_compra, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.ncode_profo, "Proforma", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.ncode_profo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ncode_profo, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.sobse_venta, "Observaciones", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextAreaFor(model => model.sobse_venta, 3, 30, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sobse_venta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="row ptp-cabebuscar">
                <div class="col-md-4">
                    <label>Articulos seleccionados</label>
                </div>
                <div class="col-md-4">
                </div>
                <div class="col-md-4 text-right">
                    <span Class="addMat glyphicon glyphicon-file btn btn-default" data-toggle="modal" data-target="#modalMat"></span>
                    <span Class="delMat glyphicon glyphicon-trash btn btn-default"></span>
                </div>
            </div>
            <Table id="tbl" class="table table-striped">
                <thead>
                    <tr>
                        <th>CodArt</th>
                        <th>Codigo</th>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>UM</th>
                        <th>Precio</th>
                        <th>Precio</th>
                        <th>M</th>
                        <th>bafecto</th>
                        <th>bisc</th>
                        <th>bdscto</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model.VENTA_DETALLE)
                        {
                            var currentItem = item;
                            <tr>
                                <td>
                                    @Html.DisplayTextFor(x => currentItem.ARTICULO.ncode_arti)
                                </td>
                                <td>
                                    @Html.DisplayTextFor(x => currentItem.ARTICULO.scode_arti)
                                </td>
                                <td>
                                    @Html.DisplayTextFor(x => currentItem.ARTICULO.sdesc1_arti)
                                </td>
                                <td>
                                    @currentItem.ncant_vedeta
                                </td>
                                <td>

                                </td>
                                <td>
                                    @currentItem.npu_vedeta
                                </td>
                                <td>

                                </td>
                                <td>

                                </td>
                                <td>
                                       @currentItem.ARTICULO.bafecto_arti.ToString().ToLower()
                                </td>
                                <td>
                                    @currentItem.ARTICULO.bisc_arti.ToString().ToLower()
                                </td>
                                <td>
                                    @currentItem.ARTICULO.bdscto_arti.ToString().ToLower()
                                </td>

                            </tr>

                        }
                    }
                </tbody>
            </Table>

            <div Class="modal fade" id="modalMat" role="dialog">
                <div Class="modal-dialog">
                    <div Class="modal-content">
                        <div Class="modal-header">
                            <Button type="button" Class="close" data-dismiss="modal">&times;</Button>
                            <h4 Class="modal-title">Seleccionar Articulo</h4>
                        </div>
                        <div Class="modal-body">
                            <Table id="matetabla" Class="matetabla table-striped">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Código</th>
                                        <th>Descripción</th>
                                        <th>U.M</th>
                                        <th>Stock</th>
                                        <th>Precio</th>
                                        <th>CodUM</th>
                                        <th>bafecto</th>
                                        <th>bisc</th>
                                        <th>bdscto</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>Código</th>
                                        <th>Descripción</th>
                                        <th>U.M</th>
                                        <th>Stock</th>
                                        <th>Precio</th>
                                        <th>CodUM</th>
                                        <th>bafecto</th>
                                        <th>bisc</th>
                                        <th>bdscto</th>
                                    </tr>
                                </tfoot>
                            </Table>
                        </div>
                        <div Class="modal-footer">
                            <Button id="btnmate" name="btnmate" type="button" Class="btn btn-default">Añadir</Button>
                            <Button id="btncerrar" name="btncerrar" type="button" Class="btn btn-default" data-dismiss="modal">Cerrar</Button>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="form-group">
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th></th>
                        <th>T.Bruto</th>
                        <th>Dscto</th>
                        <th>SubTotal</th>
                        <th>IGV</th>
                        <th>Total</th>
                        <th>Total-Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Exonerado</td>
                        <td>
                            <input id="nbrutoex_venta" name="nbrutoex_venta" type="text" class="form-control" readonly />
                        </td>
                        <td>
                            <input id="ndctoex_venta" name="ndctoex_venta" type="text" class="form-control" readonly />
                        </td>
                        <td>
                            <input id="nsubex_venta" name="nsubex_venta" type="text" class="form-control" readonly />
                        </td>
                        <td>
                            <input id="nigvex_venta" name="nigvex_venta" type="text" class="form-control" readonly />
                        </td>
                        <td>
                            <input id="ntotaex_venta" name="ntotaex_venta" type="text" class="form-control" readonly />
                        </td>
                        <td rowspan="2">
                            <input id="ntotal_venta" name="ntotal_venta" type="text" class="form-control" readonly />
                        </td>
                    </tr>
                    <tr>
                        <td>Afecto</td>
                        <td>
                            <input id="nbrutoaf_venta" name="nbrutoaf_venta" type="text" class="form-control" readonly />
                        </td>
                        <td>
                            <input id="ndsctoaf_venta" name="ndsctoaf_venta" type="text" class="form-control" readonly />
                        </td>
                        <td>
                            <input id="nsubaf_venta" name="nsubaf_venta" type="text" class="form-control" readonly />
                        </td>
                        <td>
                            <input id="nigvaf_venta" name="nigvaf_venta" type="text" class="form-control" readonly />
                        </td>
                        <td>
                            <input id="ntotaaf_venta" name="ntotaaf_venta" type="text" class="form-control" readonly />
                        </td>

                    </tr>
                </tbody>
            </table>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <button id="btnventa" type="button" class="btn btn-success btn-block">Actualizar</button>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink(" ", "Index", new { }, new { @class = "btn btn-primary glyphicon glyphicon-hand-left", title = "Lista de Ventas" })
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/cliente")
    @Scripts.Render("~/bundles/venta")
