@model MarketASP.Models.VENTAS

@{
    ViewBag.Title = "Registrar Venta";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col">
            <h5 class="text-center">@ViewBag.Title</h5>
        </div>
    </div>
    <form>
        <div class="row">
            <div class="col-lg-6"> @*Datos del Cliente*@
                <div class="card">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-lg-10">
                                <input id="COD_CLIENTE" name="COD_CLIENTE" type="hidden" />
                                <input id="sdesc_cliente" name="sdesc_cliente" type="text" class="form-control" placeholder="Cliente" autofocus />
                                @Html.ValidationMessageFor(model => model.ncode_cliente, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-2">
                                <span Class="addCliente btn btn-default fas fa-file fa-2x text-gray-300" data-toggle="modal" data-target="#modalCliente"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-2">
                                <label class="text-xs text-primary text-uppercase font-weight-bold">Dirección :</label>
                            </div>
                            <div class="col-lg-10">
                                <select id="NRO_DCLIENTE" name="NRO_DCLIENTE"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-6">
                                <input id="sruc_cliente" name="sruc_cliente" type="text" class="form-control" placeholder="RUC" />
                            </div>
                            <div class="col-lg-6">
                                <input id="sdni_cliente" name="sdni_cliente" type="text" class="form-control" placeholder="DNI" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-lg-12">
                                @Html.DropDownList("ncode_docu", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ncode_docu, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-2">
                                <label class="text-xs text-primary text-uppercase font-weight-bold">Serie :</label>
                            </div>
                            <div class="col-lg-4">
                                @Html.EditorFor(model => model.sseri_venta, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sseri_venta, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-2">
                                <label class="text-xs text-primary text-uppercase font-weight-bold">Número :</label>
                            </div>
                            <div class="col-lg-4">
                                @Html.EditorFor(model => model.snume_venta, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.snume_venta, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-2">
                                <label class="text-xs text-primary text-uppercase font-weight-bold">F.Emisión :</label>
                            </div>
                            <div class="col-lg-4">
                                <input id="dfeventa_venta" style="width:6em" name="dfeventa_venta" type="text" class="dfech" value="@string.Format("{0:d}",DateTime.Now)" />
                                @Html.ValidationMessageFor(model => model.dfeventa_venta, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-2">
                                <label class="text-xs text-primary text-uppercase font-weight-bold">F.Vcto :</label>
                            </div>
                            <div class="col-lg-4">
                                <input id="dfevenci_venta" style="width:6em" name="dfevenci_venta" type="text" class="dfech" value="@string.Format("{0:d}",DateTime.Now)" readonly />
                                @Html.ValidationMessageFor(model => model.dfevenci_venta, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-lg-2">
                                <label class="text-xs text-primary text-uppercase font-weight-bold">Almacen :</label>
                            </div>
                            <div class="col-lg-10">
                                @Html.DropDownList("ncode_alma", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-2">
                                <label class="text-xs text-primary text-uppercase font-weight-bold">O.C :</label>
                            </div>
                            <div class="col-lg-4">
                                @Html.EditorFor(model => model.ncode_compra, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ncode_compra, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-2">
                                <label class="text-xs text-primary text-uppercase font-weight-bold">Proforma :</label>
                            </div>
                            <div class="col-lg-4">
                                @Html.EditorFor(model => model.ncode_profo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ncode_profo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-2">
                                <label class="text-xs text-primary text-uppercase font-weight-bold">Observación :</label>
                            </div>
                            <div class="col-lg-10">
                                <textarea class="form-control" rows="2" id="sobse_venta" name="sobse_venta"></textarea>
                                @Html.ValidationMessageFor(model => model.sobse_venta, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-lg-2">
                                <label class="text-xs text-primary text-uppercase font-weight-bold">F.Pago :</label>
                            </div>
                            <div class="col-lg-10">
                                @Html.DropDownList("ncode_fopago", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ncode_fopago, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-2">
                                <label class="text-xs text-primary text-uppercase font-weight-bold">Moneda :</label>
                            </div>
                            <div class="col-lg-4">
                                @Html.DropDownList("smone_venta")
                                @Html.ValidationMessageFor(model => model.smone_venta, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-2">
                                <label class="text-xs text-primary text-uppercase font-weight-bold">T.C :</label>
                            </div>
                            <div class="col-lg-4">
                                <input id="ntc_venta" style="width:6em" name="ntc_venta" type="text" value="@ViewBag.tc" readonly />
                                @Html.ValidationMessageFor(model => model.ntc_venta, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div Class="modal fade" id="modalCliente" role="dialog">
                <div Class="modal-dialog">
                    <div Class="modal-content">
                        <div Class="modal-header">
                            <h6 Class="modal-title font-weight-bold">Nuevo Cliente</h6>
                            <Button type="button" Class="close" data-dismiss="modal">&times;</Button>
                        </div>
                        <div Class="modal-body">
                            <div class="form-group row">
                                <div class="col-lg-12">
                                    Persona Juridica
                                    <input id="stipo_cliente" name="stipo_cliente" type="radio" value="J" checked="checked" />
                                    Persona Natural
                                    <input id="stipo_cliente" name="stipo_cliente" type="radio" value="N" />
                                </div>
                            </div>
                            <div class="form-group row natural">
                                <div class="col-lg-12">
                                    <input id="snomb_cliente" name="snomb_cliente" type="text" class="form-control" maxlength="20" placeholder="Ingrese Nombres" />
                                </div>
                            </div>
                            <div class="form-group row natural">
                                <div class="col-lg-6">
                                    <input id="sappa_cliente" name="sappa_cliente" type="text" class="form-control" maxlength="20" placeholder="Ingrese Paterno" />
                                </div>
                                <div class="col-lg-6">
                                    <input id="sapma_cliente" name="sapma_cliente" type="text" class="form-control" maxlength="20" placeholder="Ingrese Materno" />
                                </div>
                            </div>
                            <div class="form-group row juridica">
                                <div class="col-lg-12">
                                    <input id="srazon_cliente" name="srazon_cliente" type="text" class="form-control" placeholder="Ingrese Razon Social" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-6">
                                    <input id="sruc_cliente" name="sruc_cliente" type="text" class="form-control" maxlength="11" placeholder="Ingrese RUC" />
                                </div>
                                <div class="col-lg-6">
                                    <input id="sdnice_cliente" name="sdnice_cliente" type="text" class="form-control" maxlength="14" placeholder="Ingrese DNI" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-12">
                                    <input id="sdire_cliente" name="sdire_cliente" type="text" class="form-control" placeholder="Ingrese Dirección" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-12">
                                    <input id="scode_ubigeo" name="scode_ubigeo" type="hidden" />
                                    <input id="subigeo" name="subigeo" type="text" class="form-control" placeholder="Ingrese Ubicación" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-6">
                                    <input id="sfono1_cliente" name="sfono1_cliente" type="tel" class="form-control" placeholder="Ingrese Teléfono" />
                                </div>
                                <div class="col-lg-6">
                                    <input id="smail_cliente" name="smail_cliente" type="email" class="form-control" placeholder="Ingrese Correo" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-6">
                                    <input id="srepre_cliente" name="srepre_cliente" type="text" class="form-control" placeholder="Ingrese Contacto" />
                                </div>
                                <div class="col-lg-6">
                                    <input id="sfono2_cliente" name="sfono2_cliente" type="tel" class="form-control" placeholder="Ingrese Teléfono" />
                                </div>
                            </div>
                        </div>
                        <div Class="modal-footer">
                            <Button id="btnCliente" name="btnCliente" type="button" Class="btn btn-success">Añadir</Button>
                            <Button id="btnCliCierre" name="btnCliCierre" type="button" Class="btn btn-warning" data-dismiss="modal">Cerrar</Button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
                <div class="col-lg-6">
                    <p>Productos</p>
                </div>
                <div class="col-lg-6">
                    <button type="button" class="addMat fas fa-file btn btn-info" data-toggle="modal" data-target="#modalMat"></button>
                    <button type="button" class="delMat fas fa-trash-alt btn btn-warning"></button>
                </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <Table id="tbl" class="table table-striped table-responsive-lg" style="width:100%" >
                    <thead class="thead-dark">
                        <tr>
                            <th>CodArt</th>
                            <th>Codigo</th>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>UM</th>
                            <th>Precio</th>
                            <th>Precio</th>
                            <th>M</th>
                            <th>bafecto</th>
                            <th>bisc</th>
                            <th>bdscto</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model.VENTA_DETALLE)
                            {
                                var currentItem = item;
                                <tr>
                                    <td>
                                        @Html.DisplayTextFor(x => currentItem.ARTICULO.ncode_arti)
                                    </td>
                                    <td>
                                        @Html.DisplayTextFor(x => currentItem.ARTICULO.scode_arti)
                                    </td>
                                    <td>
                                        @Html.DisplayTextFor(x => currentItem.ARTICULO.sdesc1_arti)
                                    </td>
                                    <td>
                                        @Html.DisplayTextFor(x => currentItem.ncant_vedeta)
                                    </td>
                                    <td></td>
                                    <td>
                                        @Html.DisplayTextFor(x => currentItem.npu_vedeta)
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        @Html.DisplayTextFor(x => currentItem.ARTICULO.bafecto_arti)
                                    </td>
                                    <td>
                                        @Html.DisplayTextFor(x => currentItem.ARTICULO.bisc_arti)
                                    </td>
                                    <td>
                                        @Html.DisplayTextFor(x => currentItem.ARTICULO.bdscto_arti)
                                    </td>
                                    <td></td>
                                </tr>

                            }
                        }
                    </tbody>
                </Table>
            </div>
        </div>
        <div class="row">
            <div Class="modal fade" id="modalMat" role="dialog">
                <div Class="modal-dialog">
                    <div Class="modal-content">
                        <div Class="modal-header">
                            <h6 Class="modal-title font-weight-bold">Seleccionar Articulo</h6>
                            <Button id="btnmatcerrar" type="button" Class="close" data-dismiss="modal">&times;</Button>
                        </div>
                        <div Class="modal-body">
                            <Table id="matetabla" Class="matetabla table-striped table-responsive-lg">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Id</th>
                                        <th>Código</th>
                                        <th>Descripción</th>
                                        <th>U.M</th>
                                        <th>Stock</th>
                                        <th>Precio</th>
                                        <th>CodUM</th>
                                        <th>bafecto</th>
                                        <th>bisc</th>
                                        <th>bdscto</th>
                                    </tr>
                                </thead>
                            </Table>
                        </div>
                        <div Class="modal-footer">
                            <Button id="btnmate" name="btnmate" type="button" Class="btn btn-success">Añadir</Button>
                            <Button id="btncerrar" name="btncerrar" type="button" Class="btn btn-warning" data-dismiss="modal">Cerrar</Button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-striped table-responsive-lg">
                    <thead class="thead-dark">
                        <tr>
                            <th></th>
                            <th>T.Bruto</th>
                            <th>Dscto</th>
                            <th>SubTotal</th>
                            <th>IGV</th>
                            <th>Total</th>
                            <th>Total-Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Exonerado</td>
                            <td>
                                <input id="nbrutoex_venta" name="nbrutoex_venta" type="text" class="form-control" readonly />
                            </td>
                            <td>
                                <input id="ndctoex_venta" name="ndctoex_venta" type="text" class="form-control" readonly />
                            </td>
                            <td>
                                <input id="nsubex_venta" name="nsubex_venta" type="text" class="form-control" readonly />
                            </td>
                            <td>
                                <input id="nigvex_venta" name="nigvex_venta" type="text" class="form-control" readonly />
                            </td>
                            <td>
                                <input id="ntotaex_venta" name="ntotaex_venta" type="text" class="form-control" readonly />
                            </td>
                            <td rowspan="2">
                                <input id="ntotal_venta" name="ntotal_venta" type="text" class="form-control" readonly />
                            </td>
                        </tr>
                        <tr>
                            <td>Afecto</td>
                            <td>
                                <input id="nbrutoaf_venta" name="nbrutoaf_venta" type="text" class="form-control" readonly />
                            </td>
                            <td>
                                <input id="ndsctoaf_venta" name="ndsctoaf_venta" type="text" class="form-control" readonly />
                            </td>
                            <td>
                                <input id="nsubaf_venta" name="nsubaf_venta" type="text" class="form-control" readonly />
                            </td>
                            <td>
                                <input id="nigvaf_venta" name="nigvaf_venta" type="text" class="form-control" readonly />
                            </td>
                            <td>
                                <input id="ntotaaf_venta" name="ntotaaf_venta" type="text" class="form-control" readonly />
                            </td>

                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col m-2">
            <button id="btnventa" type="button" class="btn btn-success btn-block">Registrar</button>
        </div>
    </div>
}
<div>
    @Html.ActionLink(" ", "Index", new { }, new { @class = "btn btn-primary fas fa-hand-point-left", title = "Lista de Ventas" })
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/cliente")
    @Scripts.Render("~/bundles/venta")
    <script type="text/javascript">
        var urlGetDocuNumero = '@Url.Action("getDocuNumero", "Funciones",new { area = ""})';
        var urlGetDiasFormaPago = '@Url.Action("getDiasFormaPago", "Funciones",new { area = ""})';
        var urlGetCliente = '@Url.Action("getCliente", "Funciones",new { area = ""})';
        var urlGetRucCliente = '@Url.Action("getRucCliente", "Funciones",new { area = ""})';
        var urlGetDniCliente = '@Url.Action("getDniCliente", "Funciones",new { area = ""})';
        var urlGetClienteDire = '@Url.Action("getClienteDire", "Funciones",new { area = ""})';
        var urlClienteNuevo = '@Url.Action("CreateCliente", "Funciones",new { area = ""})';
        var urlGetUbigeo = '@Url.Action("getUbigeo", "Funciones")';
        var urlArticulos = '@Url.Action("getArticulos", "Funciones",new { area = ""})';
        var urlEditar = '@Url.Action("fnnumeroeditar", "Funciones", new { area = "" })';
        var urlventaCrea = '@Url.Action("Create", "ventas")';
        var urlventaLista = '@Url.Action("index", "ventas")';
        var urlventaCobro = '@Url.Action("CreateCobro", "cta_cobrar", new { id="param-id", xtipo = "venta"})';
    </script>

}
