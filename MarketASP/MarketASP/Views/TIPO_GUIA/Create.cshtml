@model MarketASP.Models.TIPO_GUIA

@{
    ViewBag.Title = "Registrar Tipo Movimiento";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-12">
                <h5 class="text-center">@ViewBag.Title</h5>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.sdesc_tiguia, "Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.sdesc_tiguia, new { htmlAttributes = new { @class = "form-control", @autofocus = "autofocus", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.sdesc_tiguia, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.stipo_tiguia, "Tipo Movimiento", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("stipo_tiguia", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ncode_tiguia, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.binout_tiguia, "Es Ingreso", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    <span>@Html.EditorFor(model => model.binout_tiguia) Seleccionar si es Entrada </span>
                                    @Html.ValidationMessageFor(model => model.binout_tiguia, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.btransf_tiguia, "Transferencia", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    <span>@Html.EditorFor(model => model.btransf_tiguia) Seleccionar si transferira entre almacenes</span>
                                    @Html.ValidationMessageFor(model => model.btransf_tiguia, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.besta_tiguia, "Activo", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.besta_tiguia)
                                    @Html.ValidationMessageFor(model => model.besta_tiguia, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col mb-2">
                <input type="submit" value="Registrar" class="btn btn-block btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(" ", "Index", new { }, new { @class = "btn btn-primary fas fa-hand-point-left", title = "Listado" })
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
