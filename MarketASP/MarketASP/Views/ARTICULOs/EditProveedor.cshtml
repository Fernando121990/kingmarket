@model MarketASP.Models.ART_PROVE

@{
    ViewBag.Title = "Editar Proveedor";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h5 class="font-weight-bold">@ViewBag.Title</h5>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ncode_arprove)
    @Html.HiddenFor(model => model.ncode_arti)

    <div class="form-group row">
        @Html.LabelFor(model => model.ncode_provee, "Proveedor", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ncode_provee", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ncode_provee, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col m-2">
            <input type="submit" value="Actualizar" class="btn btn-block btn-success" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink(" ", "Details", new { id = Model.ncode_arti }, new { @class = "btn btn-primary fas fa-hand-point-left", title = "Lista de Articulos" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


