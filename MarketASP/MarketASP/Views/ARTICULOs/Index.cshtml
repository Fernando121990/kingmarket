@model IEnumerable<MarketASP.Models.ARTICULO>

@{
    ViewBag.Title = "Listado de Articulos";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h5 class="h3 mb-0 text-gray-800">@ViewBag.Title</h5>
    <a href="@Url.Action("Create")" class="btn btn-primary btn-circle btn-sm" title="Añadir Articulo">
        <i class="fas fa-file"></i>
    </a>
</div>

<table class="table datatbl table-striped table-responsive-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                Código
            </th>
            <th>
                Descripción
            </th>
            <th>U.M</th>
            <th>
                ISC
            </th>
            <th>
                AFECTO
            </th>
            <th>
                IVAP
            </th>
            <th>
                Activo
            </th>
            <th></th>
        </tr>
</thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.ActionLink(item.scode_arti, "Details", new { id = item.ncode_arti })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sdesc1_arti)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UMEDIDA.sdesc_umed)
            </td>
            <td>
                <input type="checkbox" checked="@item.bisc_arti" readonly />
            </td>
            <td>
                <input type="checkbox" checked="@item.bafecto_arti" readonly />
            </td>
            <td>
                <input type="checkbox" checked="@item.bivap_arti" readonly />
            </td>
            <td>
                <input type="checkbox" checked="@item.nesta_arti" readonly />
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.ncode_arti })" class="btn btn-success btn-circle btn-sm" title="Edita Clase">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="@Url.Action("DeleteArti", new { id = item.ncode_arti })" class="btn btn-danger btn-circle btn-sm" title="Eliminar Clase" onclick="return confirm('¿ Seguro de eliminar registro ?');">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
