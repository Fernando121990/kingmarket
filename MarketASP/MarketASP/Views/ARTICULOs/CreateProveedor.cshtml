@model MarketASP.Models.ART_PROVE

@{
    ViewBag.Title = "Añadir Proveedor";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@ViewBag.Title</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="ncode_arti" id="ncode_arti" value="@ViewBag.ncode_arti" />

        <div class="form-group">
            @Html.LabelFor(model => model.ncode_provee, "Proveedor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ncode_provee", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ncode_provee, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(" ", "Details", new { id = @ViewBag.ncode_arti }, new { @class = "btn btn-primary glyphicon glyphicon-hand-left", title = "Lista de Articulos" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


