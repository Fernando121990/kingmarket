@model MarketASP.Models.ART_BARRA

@{
    ViewBag.Title = "Editar Cod.Barra";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>@ViewBag.Title</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ncode_barra)
    @Html.HiddenFor(model => model.ncode_arti)

    <div class="form-group">
        @Html.LabelFor(model => model.sdesc_barra,"Cod.Barra", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.sdesc_barra, new { htmlAttributes = new { @class = "form-control", @required="required" } })
            @Html.ValidationMessageFor(model => model.sdesc_barra, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.nesta_barra,"Activo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.CheckBox("nesta_barra")
                @Html.ValidationMessageFor(model => model.nesta_barra, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Actualizar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink(" ", "Details", new { id = @ViewBag.ncode_arti }, new { @class = "btn btn-primary glyphicon glyphicon-hand-left", title = "Lista de Articulos" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


