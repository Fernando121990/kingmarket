@model MarketASP.Models.CLI_DIRE

@{
    ViewBag.Title = "Cliente Direccion";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>@ViewBag.Title</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <input type="hidden" name="ncode_cliente" id="ncode_cliente" value="@ViewBag.ncode_cliente" />

    <div class="form-group">
        <label class="col-md-2 control-label">Dirección</label>
        <div class="col-md-4">
            <input id="sdesc_clidire" name="sdesc_clidire" type="text" class="form-control" required />
            @Html.ValidationMessageFor(model => model.sdesc_clidire, "", new { @class = "text-danger" })
        </div>
        <label class="col-md-2 control-label">Ubicacion</label>
        <div class="col-md-4">
            <input id="scode_ubigeo" name="scode_ubigeo" type="hidden" />
            <input id="subigeo" name="subigeo" type="text" class="form-control" required />
        </div>
    </div>

    @*<div class="form-group">
        @Html.LabelFor(model => model.scode_ubigeo, "scode_ubigeo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("scode_ubigeo", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.scode_ubigeo, "", new { @class = "text-danger" })
        </div>
    </div>*@

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink(" ", "Details", new { id = @ViewBag.ncode_cliente }, new { @class = "btn btn-primary glyphicon glyphicon-hand-left", title = "Lista de Clientes" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        var urlGetUbigeo = '@Url.Action("getUbigeo", "Funciones")';
    </script>
}
