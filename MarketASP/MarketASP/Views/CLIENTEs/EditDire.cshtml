@model MarketASP.Models.CLI_DIRE

@{
    ViewBag.Title = "Editar Dirección";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h5 class="h3 mb-0 text-gray-800">@ViewBag.Title</h5>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ncode_clidire)
        <input type="hidden" name="ncode_cliente" id="ncode_cliente" value="@ViewBag.ncode_cliente" />

        <div class="form-group row">
            <label class="col-md-2 control-label">Dirección</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.sdesc_clidire, new { htmlAttributes = new { @class = "form-control", @required = "required", @autofocus = "autofocus" } })
                @Html.ValidationMessageFor(model => model.sdesc_clidire, "", new { @class = "text-danger" })
            </div>
            <label class="col-md-2 control-label">Ubicacion</label>
            <div class="col-md-4">
                <input id="scode_ubigeo" name="scode_ubigeo" type="hidden" value="@ViewBag.scode_ubigeo" />
                <input id="subigeo" name="subigeo" type="text" value="@ViewBag.subigeo" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <div class="offset-md-2 col-md-8">
                <input type="submit" value="Actualizar" class="btn btn-success btn-block" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(" ", "Details", new { id = @ViewBag.ncode_cliente }, new { @class = "btn btn-primary fas fa-hand-point-left", title = "Lista de Clientes" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        var urlGetUbigeo = '@Url.Action("getUbigeo", "Funciones")';
    </script>
}
