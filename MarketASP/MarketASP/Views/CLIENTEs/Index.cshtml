@model IEnumerable<MarketASP.Models.CLIENTE>

@{
    ViewBag.Title = "Consulta de Clientes";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h5 class="h3 mb-0 text-gray-800">@ViewBag.Title</h5>
    <a href="@Url.Action("Create")" class="btn btn-primary btn-circle btn-sm" title="Añadir Cliente">
        <i class="fas fa-file"></i>
    </a>
</div>

<table class="table table-striped table-responsive-sm">
    <thead class="thead-dark">
        <tr>
            <th>Cod</th>
            <th>
                Razón Social
            </th>
            <th>RUC</th>
            <th>
                DNI/CE
            </th>
            <th>
                Nombre
            </th>
            <th>
                A.Paterno
            </th>
            <th>
                A.Materno
            </th>
            <th>
                Telf.
            </th>
            <th>
                Correo
            </th>
            <th>
                Web
            </th>
            <th>
                J/N
            </th>
            <th>
                Extranjero
            </th>
            <th></th>
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.ncode_cliente.ToString(), "Details", new { id = item.ncode_cliente })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.srazon_cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sruc_cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sdnice_cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.snomb_cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sappa_cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sapma_cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sfono1_cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.smail_cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sweb_cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.stipo_cliente)
                </td>
                <td>
                    <input type="checkbox" checked="@item.bprocedencia_cliente" readonly />
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ncode_cliente })" class="btn btn-success btn-circle btn-sm" title="Edita">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="@Url.Action("DeleteCliente", new { id = item.ncode_cliente })" class="btn btn-danger btn-circle btn-sm" title="Eliminar" onclick="return confirm('¿ Seguro de eliminar registro ?');">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
