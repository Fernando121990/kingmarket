                    <table id="lotetabla" class="table dt-responsive nowrap w-100" style="font-size: 12px">
                        <thead class="thead-dark">
                            <tr>
                                <th>Id</th>
                                <th>Lote</th>
                                <th>Vence</th>
                                <th>cod.art</th>
