    <div class="tab-pane" id="lote-1" role="tabpanel">
        <div class="row">
            <div class="col-lg-12">
                <Table id="tblLote" class="table table-striped table-responsive-lg" style="width:100%">
                    <thead class="thead-dark">
                        <tr>
                            <th>CodArt</th>
                            <th>Codigo</th>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>UM</th>
                            <th>Lote</th>
                            <th>F.vencimiento</th>
                            <th>cod.lote</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model.MOVI_LOTE)
                            {
                                var currentItem = item;
                                <tr>
                                    <td>@Html.DisplayTextFor(x => currentItem.ARTICULO.ncode_arti)</td>
                                    <td>@Html.DisplayTextFor(x => currentItem.ARTICULO.scode_arti)</td>
                                    <td>@Html.DisplayTextFor(x => currentItem.ARTICULO.sdesc1_arti)</td>
                                    <td>@Html.DisplayTextFor(x => currentItem.ncant_movilote)</td>
