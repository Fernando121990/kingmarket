@model MarketASP.Models.LOCAL

@{
    ViewBag.Title = "Actualizar Local";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ncode_local)
    <div class="form-group row">
        <div class="col-md-12">
            <h4 class="text-center">@ViewBag.Title</h4>
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.ncode_sucu, "Sucursal", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ncode_sucu", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ncode_sucu, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.sdesc_local, "Local", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.sdesc_local, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.sdesc_local, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.sdire_local, "Dirección", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.sdire_local, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.sdire_local, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.scode_ubigeo, "Ubigeo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            <input id="scode_ubigeo" name="scode_ubigeo" type="hidden" value="@Model.scode_ubigeo" />
            <input id="subigeo" name="subigeo" type="text" class="form-control" value="@Model.UBIGEO.sdistri_ubigeo" required />
            @Html.ValidationMessageFor(model => model.scode_ubigeo, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.bacti_local, "Activo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            <div class="checkbox">
                @Html.EditorFor(model => model.bacti_local)
                @Html.ValidationMessageFor(model => model.bacti_local, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col m-2">
            <input type="submit" value="Actualizar" class="btn btn-block btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink(" ", "Index", new { }, new { @class = "btn btn-primary fas fa-hand-point-left", title = "Listado" })
</div>