    @Html.HiddenFor(model => model.ncode_umed)

    <div class="form-group">
        @Html.LabelFor(model => model.sdesc_umed, "Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.sdesc_umed, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.sdesc_umed, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.scodsunat_umed,"Cod.Sunat", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.scodsunat_umed, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.scodsunat_umed, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ssunat_umed,"Desc.Sunat", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ssunat_umed, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ssunat_umed, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.nesta_umed,"Activo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.CheckBox("nesta_umed")
                @Html.ValidationMessageFor(model => model.nesta_umed, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Grabar" class="btn btn-default" />
        </div>
    </div>
