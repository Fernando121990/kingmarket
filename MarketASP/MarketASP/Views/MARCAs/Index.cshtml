@model IEnumerable<MarketASP.Models.MARCA>

@{
    ViewBag.Title = "Listado de Marcas";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h5 class="h3 mb-0 text-gray-800">@ViewBag.Title</h5>
    <a href="@Url.Action("Create")" class="btn btn-primary btn-circle btn-sm" title="Añadir Marca">
        <i class="fas fa-file"></i>
    </a>
</div>

<table class="table table-striped table-responsive-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                Descripción
            </th>
            <th>
                Activo
            </th>
            <th></th>
        </tr>
</thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.sdesc_marca)
                </td>
                <td>
                    <input type="checkbox" checked="@item.nesta_marca" readonly />
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ncode_marca })" class="btn btn-success btn-circle btn-sm" title="Edita">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="@Url.Action("DeleteMarca", new { id = item.ncode_marca })" class="btn btn-danger btn-circle btn-sm" title="Eliminar" onclick="return confirm('¿ Seguro de eliminar registro ?');">
                        <i class="fas fa-trash"></i>
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>
