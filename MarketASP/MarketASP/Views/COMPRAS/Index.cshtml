@model IEnumerable<MarketASP.Models.Pr_CompraLista_Result>

@{
    ViewBag.Title = "Compras";
    ViewBag.pTitle = "Consulta";
    ViewBag.pageTitle = "Compras";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-success mb-2"><i class="mdi mdi-plus me-2"></i> Agregar Compra</a>
                </div>
                <div class="table-responsive mt-3">
                    @*<table id="datatable" class="table table-centered datatable nowrap " style="border-collapse: collapse; border-spacing: 0; width: 100%; font-size:12px">*@
                        <table id="datatable" class="table dataTable nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%; font-size:12px">
                            <thead class="thead-light">
                                <tr>
                                    <th>Proveedor</th>
                                    <th>No Doc.</th>
                                    <th>F.Compra</th>
                                    <th>Guia</th>
                                    <th>OC</th>
                                    <th>Total</th>
                                    <th>Situac</th>
                                    <th>Alm</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.proveedor)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.documento)
                                        </td>
                                        <td>
                                            @string.Format("{0:d}", item.fecha)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GuiaDoc)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OCDoc)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.total)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.situacion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.almacen)
                                        </td>
                                        <td>
                                            @if (item.besta_compra == true)
                                            {
                                                <a href="@Url.Action("Edit", new { id = item.ncode_compra })" class="btn btn-success btn-circle btn-sm" title="Edita">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("anulaCompra", new { id = item.ncode_compra })" class="btn btn-primary btn-circle btn-sm" title="Anular">
                                                    <i class="fas fa-circle-notch"></i>
                                                </a>
                                                <a href="@Url.Action("DeleteCompra", new { id = item.ncode_compra })" class="btn btn-danger btn-circle btn-sm" title="Eliminar" onclick="return confirm('¿ Seguro de eliminar registro ?');">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
</div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->