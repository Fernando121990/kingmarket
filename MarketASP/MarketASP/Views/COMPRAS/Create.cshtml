@model MarketASP.Models.COMPRAS

@{
    ViewBag.Title = "Agregar Compra";
    ViewBag.pTitle = "Agregar Compra";
    ViewBag.pageTitle = "Compras";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <input id="cnfdeci" name="cnfdeci" type="hidden" value="@ViewBag.deci" />
                    <input id="cnfigv" name="cnfigv" type="hidden" value="@ViewBag.igv" />
                    <input id="cnficbper" name="cnficbper" type="hidden" value="@ViewBag.icbper" />

                    @Html.Partial("_Compra")
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/cliente")
    @Scripts.Render("~/bundles/compra")
    <script type="text/javascript">
        var urlGetProveedor = '@Url.Action("getProveedor", "Funciones",new { area = ""})';
        var urlArticulos = '@Url.Action("getMatTabla", "Funciones",new { area = ""})';
        var urlEditar = '@Url.Action("fnnumeroeditar", "Funciones", new { area = "" })';
        var urlcompraCrea = '@Url.Action("Create", "compras")';
        var urlcompraLista = '@Url.Action("Index", "compras")';
    var urlPedidoCompra = '@Url.Action("getPedidoCompra", "Funciones")';
    var urlGetOrdenCompra = '@Url.Action("getOrdenCompra", "Funciones",new { area = ""})';
    </script>

}

