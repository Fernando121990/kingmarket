@model MarketASP.Models.COMPRAS

@{
    ViewBag.Title = "Registrar Compra";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col">
                <h5 class="text-center">@ViewBag.Title</h5>
            </div>
        </div>
        <form>
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-lg-10">
                                    <input id="ncode_provee" name="ncode_provee" type="hidden" />
                                    <input id="sdesc_prove" name="sdesc_prove" type="text" class="form-control" placeholder="Ingrese Proveedor" />
                                    @Html.ValidationMessageFor(model => model.ncode_provee, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-2">
                                    <span Class="addProveedor btn btn-default fas fa-file fa-2x text-gray-300" data-toggle="modal" data-target="#modalProveedor"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-2">
                                    <label class="text-xs text-primary text-uppercase font-weight-bold">Almacen :</label>
                                </div>
                                <div class="col-lg-10">
                                    @Html.DropDownList("ncode_alma", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-2">
                                    <label class="text-xs text-primary text-uppercase font-weight-bold">Guia O.C :</label>
                                </div>
                                <div class="col-lg-4">
                                    @Html.EditorFor(model => model.sguia_compra, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.sguia_compra, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-2">
                                    <label class="text-xs text-primary text-uppercase font-weight-bold">Proforma :</label>
                                </div>
                                <div class="col-lg-4">
                                    @Html.EditorFor(model => model.sproforma_compra, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.sproforma_compra, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-lg-12">
                                    @Html.DropDownList("ncode_docu", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ncode_docu, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-2">
                                    <label class="text-xs text-primary text-uppercase font-weight-bold">Serie :</label>
                                </div>
                                <div class="col-lg-4">
                                    @Html.EditorFor(model => model.sseri_compra, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.sseri_compra, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-2">
                                    <label class="text-xs text-primary text-uppercase font-weight-bold">Número :</label>
                                </div>
                                <div class="col-lg-4">
                                    @Html.EditorFor(model => model.snume_compra, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.snume_compra, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-2">
                                    <label class="text-xs text-primary text-uppercase font-weight-bold">F.Emisión :</label>
                                </div>
                                <div class="col-lg-4">
                                    <input id="dfecompra_compra" style="width:6em" name="dfecompra_compra" type="text" class="dfech" value="@string.Format("{0:d}",DateTime.Now)" />
                                    @Html.ValidationMessageFor(model => model.dfecompra_compra, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-2">
                                    <label class="text-xs text-primary text-uppercase font-weight-bold">F.Vcto :</label>
                                </div>
                                <div class="col-lg-4">
                                    <input id="dfevenci_compra" style="width:6em" name="dfevenci_compra" type="text" class="dfech" value="@string.Format("{0:d}",DateTime.Now)" readonly />
                                    @Html.ValidationMessageFor(model => model.dfevenci_compra, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-lg-2">
                                    <label class="text-xs text-primary text-uppercase font-weight-bold">Observación :</label>
                                </div>
                                <div class="col-lg-10">
                                    <textarea class="form-control" rows="3" id="sobs_compra" name="sobs_compra"></textarea>
                                    @Html.ValidationMessageFor(model => model.sobs_compra, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-lg-2">
                                    <label class="text-xs text-primary text-uppercase font-weight-bold">F.Pago :</label>
                                </div>
                                <div class="col-lg-10">
                                    @Html.DropDownList("ncode_fopago", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ncode_fopago, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-2">
                                    <label class="text-xs text-primary text-uppercase font-weight-bold">Moneda :</label>
                                </div>
                                <div class="col-lg-4">
                                    @Html.DropDownList("smone_compra")
                                    @Html.ValidationMessageFor(model => model.smone_compra, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-2">
                                    <label class="text-xs text-primary text-uppercase font-weight-bold">T.C :</label>
                                </div>
                                <div class="col-lg-4">
                                    <input id="ntc_compra" style="width:6em" name="ntc_compra" type="text" value="@ViewBag.tc" readonly />
                                    @Html.ValidationMessageFor(model => model.ntc_compra, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <p>Productos</p>
                </div>
                <div class="col-lg-6">
                    <button type="button" class="addMat fas fa-file btn btn-info" data-toggle="modal" data-target="#modalMat"></button>
                    <button type="button" class="delMat fas fa-trash-alt btn btn-warning"></button>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <Table id="tbl" class="table table-striped table-responsive-lg" style="width:100%">
                        <thead class="thead-dark">
                            <tr>
                                <th>CodArt</th>
                                <th>Codigo</th>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>UM</th>
                                <th>Precio</th>
                                <th>Precio</th>
                                <th>M</th>
                                <th>bafecto</th>
                                <th>bisc</th>
                                <th>bdscto</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model.COMPRA_DETALLE)
                                {
                                    var currentItem = item;
                                    <tr>
                                        <td>
                                            @Html.DisplayTextFor(x => currentItem.ARTICULO.ncode_arti)
                                        </td>
                                        <td>
                                            @Html.DisplayTextFor(x => currentItem.ARTICULO.scode_arti)
                                        </td>
                                        <td>
                                            @Html.DisplayTextFor(x => currentItem.ARTICULO.sdesc1_arti)
                                        </td>
                                        <td>
                                            @Html.DisplayTextFor(x => currentItem.ncant_comdeta)
                                        </td>
                                        <td></td>
                                        <td>
                                            @Html.DisplayTextFor(x => currentItem.npu_comdeta)
                                        </td>
                                        <td></td>
                                        <td></td>
                                        <td>
                                            @Html.DisplayTextFor(x => currentItem.ARTICULO.bafecto_arti)
                                        </td>
                                        <td>
                                            @Html.DisplayTextFor(x => currentItem.ARTICULO.bisc_arti)
                                        </td>
                                        <td>
                                            @Html.DisplayTextFor(x => currentItem.ARTICULO.bdscto_arti)
                                        </td>
                                        <td></td>
                                    </tr>

                                }
                            }
                        </tbody>
                    </Table>
                </div>
            </div>
            <div class="row">
                <div Class="modal fade" id="modalMat" role="dialog">
                    <div Class="modal-dialog">
                        <div Class="modal-content">
                            <div Class="modal-header">
                                <h6 Class="modal-title font-weight-bold">Seleccionar Articulo</h6>
                                <Button id="btnmatcerrar" type="button" Class="close" data-dismiss="modal">&times;</Button>
                            </div>
                            <div Class="modal-body">
                                <Table id="matetabla" Class="matetabla table-striped table-responsive-lg">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Id</th>
                                            <th>Código</th>
                                            <th>Descripción</th>
                                            <th>U.M</th>
                                            <th>Stock</th>
                                            <th>Precio</th>
                                            <th>CodUM</th>
                                            <th>bafecto</th>
                                            <th>bisc</th>
                                            <th>bdscto</th>
                                        </tr>
                                    </thead>
                                </Table>
                            </div>
                            <div Class="modal-footer">
                                <Button id="btnmate" name="btnmate" type="button" Class="btn btn-success">Añadir</Button>
                                <Button id="btncerrar" name="btncerrar" type="button" Class="btn btn-warning" data-dismiss="modal">Cerrar</Button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-striped table-responsive-lg">
                        <thead class="thead-dark">
                            <tr>
                                <th></th>
                                <th>T.Bruto</th>
                                <th>Dscto</th>
                                <th>SubTotal</th>
                                <th>IGV</th>
                                <th>Total</th>
                                <th>Total-Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Exonerado</td>
                                <td>
                                    <input id="nbrutoex_compra" name="nbrutoex_compra" type="text" class="form-control" readonly />
                                </td>
                                <td>
                                    <input id="ndsctoex_compra" name="ndsctoex_compra" type="text" class="form-control" readonly />
                                </td>
                                <td>
                                    <input id="nsubex_compra" name="nsubex_compra" type="text" class="form-control" readonly />
                                </td>
                                <td>
                                    <input id="nigvex_compra" name="nigvex_compra" type="text" class="form-control" readonly />
                                </td>
                                <td>
                                    <input id="ntotaex_compra" name="ntotaex_compra" type="text" class="form-control" readonly />
                                </td>
                                <td rowspan="2">
                                    <input id="ntotal_compra" name="ntotal_compra" type="text" class="form-control" readonly />
                                </td>
                            </tr>
                            <tr>
                                <td>Afecto</td>
                                <td>
                                    <input id="nbrutoaf_compra" name="nbrutoaf_compra" type="text" class="form-control" readonly />
                                </td>
                                <td>
                                    <input id="ndsctoaf_compra" name="ndsctoaf_compra" type="text" class="form-control" readonly />
                                </td>
                                <td>
                                    <input id="nsubaf_compra" name="nsubaf_compra" type="text" class="form-control" readonly />
                                </td>
                                <td>
                                    <input id="nigvaf_compra" name="nigvaf_compra" type="text" class="form-control" readonly />
                                </td>
                                <td>
                                    <input id="ntotaaf_compra" name="ntotaaf_compra" type="text" class="form-control" readonly />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </form>

        <div class="row">
            <div class="col m-2">
                <button id="btncompra" type="button" class="btn btn-success btn-block">Registrar</button>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink(" ", "Index", new { }, new { @class = "btn btn-primary fas fa-hand-point-left", title = "Lista de Compras" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/cliente")
    @Scripts.Render("~/bundles/compra")
    <script type="text/javascript">
        var urlGetProveedor = '@Url.Action("getProveedor", "Funciones",new { area = ""})';
        var urlArticulos = '@Url.Action("getArticulos", "Funciones",new { area = ""})';
        var urlEditar = '@Url.Action("fnnumeroeditar", "Funciones", new { area = "" })';
        var urlcompraCrea = '@Url.Action("Create", "compras")';
        var urlcompraLista = '@Url.Action("Index", "compras")';
    </script>

}

