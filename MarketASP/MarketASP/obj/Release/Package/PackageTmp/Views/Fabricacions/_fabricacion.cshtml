@model MarketASP.Models.Fabricacion

<div class="row">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <label for="example-text-input" class="col-form-label">Tipo</label>
                @Html.DropDownList("Fab_tipo", null, "", htmlAttributes: new { @class = "form-control" })
                <label for="example-text-input" class="col-form-label">Lote</label>
                @Html.EditorFor(model => model.Fab_Lote, new { htmlAttributes = new { @class = "form-control", @autofocus = "autofocus" } })
                @Html.ValidationMessageFor(model => model.Fab_Lote, "", new { @class = "text-danger" })
                <label for="example-text-input" class="col-form-label">F.Vencimiento</label>
                @Html.EditorFor(model => model.Fab_Fvenc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fab_Fvenc, "", new { @class = "text-danger" })
                <label for="example-text-input" class="col-form-label">Glosa</label>
                @Html.EditorFor(model => model.Fab_Glosa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fab_Glosa, "", new { @class = "text-danger" })
                <label for="example-text-input" class="col-form-label">Costo.Unit</label>
                @Html.EditorFor(model => model.Fab_CostoUnit, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fab_CostoUnit, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <label for="example-text-input" class="col-form-label">Doc.Prod</label>
                @Html.DropDownList("Fab_TipoProd", null, "", htmlAttributes: new { @class = "form-control" })
                <label for="example-text-input" class="col-form-label">Nro Ensamblaje</label>
                @Html.EditorFor(model => model.Fab_NroDoc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fab_NroDoc, "", new { @class = "text-danger" })
                <label for="example-text-input" class="col-form-label">Fecha</label>
                @Html.EditorFor(model => model.Fab_Fecha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fab_Fecha, "", new { @class = "text-danger" })
                <label for="example-text-input" class="col-form-label">T.C</label>
                @Html.EditorFor(model => model.Fab_TipoCambio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fab_TipoCambio, "", new { @class = "text-danger" })
                <label for="example-text-input" class="col-form-label">Costo Operativo</label>
                @Html.EditorFor(model => model.Fab_CostoOperativo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fab_CostoOperativo, "", new { @class = "text-danger" })
                <label for="example-text-input" class="col-form-label">Costo Total</label>
                @Html.EditorFor(model => model.Fab_CostoTotalUS, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fab_CostoTotalUS, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <label for="example-text-input" class="col-form-label">Receta</label>
                @Html.DropDownList("Rec_codigo", null, "", htmlAttributes: new { @class = "form-control" })

                <label for="example-text-input" class="col-form-label">Cantidad</label>
                @Html.EditorFor(model => model.Fab_Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fab_Cantidad, "", new { @class = "text-danger" })

                <label for="example-text-input" class="col-form-label">Almacen</label>
                @Html.DropDownList("Fab_almacen", null, "", htmlAttributes: new { @class = "form-control" })

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <Table id="tbl" class="table table-striped table-responsive-lg" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Código</th>
                    <th>Descripción</th>
                    <th>Cant</th>
                    <th>U.M</th>
                    <th>P.U</th>
                    <th>Almacen</th>
                    <th>CodUM</th>
                    <th>Cant.Control</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model.FabricacionDetalle)
                    {
                        <tr>
                            <td>@Html.DisplayTextFor(x => item.ARTICULO.ncode_arti)</td>
                            <td>@Html.DisplayFor(modelItem => item.ARTICULO.scode_arti)</td>
                            <td>@Html.DisplayFor(modelItem => item.ARTICULO.sdesc1_arti)</td>
                            <td>@Html.DisplayFor(modelItem => item.FabD_Cantidad)</td>
                            <td>@Html.DisplayTextFor(x => item.ARTICULO.UMEDIDA.sdesc_umed)</td>
                            <td>@Html.DisplayFor(modelItem => item.FabD_Costo_D)</td>
                            <td>@Html.DisplayFor(modelItem => item.ncode_alma)</td>
                            <td>@Html.DisplayTextFor(x => item.ARTICULO.UMEDIDA.ncode_umed)</td>
                            <td></td>
                        </tr>
                    }

                }
            </tbody>
        </Table>
    </div>
</div>






<div class="text-center mt-4">
    <button id="btnmovi" name="btnmovi" type="button" class="btn btn-primary me-2 waves-effect waves-light">Guardar Cambios</button>
</div>
<div class="row">
    <div class="text-center">
        <button id="btnpro" name="btnpro" class="btn btn-block  btn-outline-warning" type="button">PROCESANDO DATOS ...</button>
    </div>
</div>


