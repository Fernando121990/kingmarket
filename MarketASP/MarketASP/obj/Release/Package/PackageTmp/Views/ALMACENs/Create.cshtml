@model MarketASP.Models.ALMACEN

@{
    ViewBag.Title = "Agregar Almacen";
    ViewBag.pTitle = "Agregar Almacen";
    ViewBag.pageTitle = "Mantenimiento";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="mb-3 form-group row">
                        @Html.LabelFor(model => model.sdesc_alma, "Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.sdesc_alma, new { htmlAttributes = new { @class = "form-control", @autofocus = "autofocus", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.sdesc_alma, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="mb-3 form-group row">
                        @Html.LabelFor(model => model.besta_alma, "Activo", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.besta_alma)
                                @Html.ValidationMessageFor(model => model.besta_alma, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary me-2 waves-effect waves-light">Guardar Cambios</button>
                    </div>
                </div>
                }

                <div>
                    @Html.ActionLink(" ", "Index", new { }, new { @class = "btn btn-primary fas fa-hand-point-left", title = "Listado" })
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
