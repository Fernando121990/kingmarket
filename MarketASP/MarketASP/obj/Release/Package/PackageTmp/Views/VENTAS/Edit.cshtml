        var urlGetDniCliente = '@Url.Action("getDniCliente", "Funciones",new { area = ""})';
        var urlGetClienteDire = '@Url.Action("getClienteDire", "Funciones",new { area = ""})';
        var urlClienteNuevo = '@Url.Action("CreateCliente", "Funciones",new { area = ""})';
        var urlGetUbigeo = '@Url.Action("getUbigeo", "Funciones")';
        var urlArticulos = '@Url.Action("getArticulos", "Funciones",new { area = ""})';
        var urlEditar = '@Url.Action("fnnumeroeditar", "Funciones", new { area = "" })';
        var urlventaCrea = '@Url.Action("Edit", "ventas")';
