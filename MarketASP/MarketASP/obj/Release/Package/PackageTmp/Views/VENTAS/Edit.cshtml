@model MarketASP.Models.VENTAS


@{
    ViewBag.Title = "Actualizar Venta";
    ViewBag.pTitle = "Actualizar Venta";
    ViewBag.pageTitle = "Venta";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ncode_venta)
                        @Html.HiddenFor(model => model.ncode_clidire)
                        <input id="cnfdeci" name="cnfdeci" type="hidden" value="@ViewBag.deci" />
                        <input id="cnfigv" name="cnfigv" type="hidden" value="@ViewBag.igv" />
                        <input id="cnficbper" name="cnficbper" type="hidden" value="@ViewBag.icbper" />

                        @Html.Partial("_Ventas")


                        <div class="text-center mt-4">
                            <button id="btnventa" name="btnventa" type="button" class="btn btn-primary me-2 waves-effect waves-light">Guardar Cambios</button>
                        </div>
                    </div>
                }
                <div>
                    @Html.ActionLink(" ", "Index", new { }, new { @class = "btn btn-primary fas fa-hand-point-left", title = "Lista de Ventas" })
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/cliente")
    @Scripts.Render("~/bundles/venta")
