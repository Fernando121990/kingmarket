@model MarketASP.Models.VENTAS


@{
    ViewBag.Title = "Detalles";
    ViewBag.pTitle = "Detalles";
    ViewBag.pageTitle = "Venta";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <a href="@Url.Action("Index")" class="btn btn-success mb-2"><i class="mdi mdi-plus me-2"></i>Volver</a>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label for="example-text-input" class="col-form-label">F.Emision</label>
                            <div>
                                @string.Format("{0:d}", Model.dfech_venta)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label for="example-text-input" class="col-form-label">F.Venc</label>
                            <div>
                                @string.Format("{0:d}", Model.dfevenci_venta)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label for="example-text-input" class="col-form-label">Documento</label>
                            <div>
                                @Html.DisplayFor(model => model.CONFIGURACION.sdesc_confi)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label for="example-text-input" class="col-form-label">Numeracion</label>
                            <div>
                                @string.Concat(Model.sseri_venta, "-", Model.snume_venta)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label for="example-text-input" class="col-form-label">F.Pago</label>
                            <div>
                                @Html.DisplayFor(model => model.CONFIGURACION1.sdesc_confi)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label for="example-text-input" class="col-form-label">Total</label>
                            <div>
                                @Model.smone_venta  @string.Format("{0:N2}", Model.ntotal_venta)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="example-text-input" class="col-form-label">Cliente</label>
                            <div>
                                @Html.DisplayFor(model => model.CLIENTE.srazon_cliente, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="example-text-input" class="col-form-label">Dirección</label>
                            <div>
                                @Html.DisplayFor(model => model.CLI_DIRE.sdesc_clidire)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label for="example-text-input" class="col-form-label">O.Pedido</label>
                            <div>
                                @Html.DisplayFor(model => model.scode_orpe)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label for="example-text-input" class="col-form-label">Compra</label>
                            <div>
                                @Html.DisplayFor(model => model.scode_compra)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label for="example-text-input" class="col-form-label">Observacion</label>
                            <div>
                                @Html.DisplayFor(model => model.sobse_venta, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                </div>

                <div class="table-responsive">
                    <table class="table table-centered datatable dt-responsive nowrap " style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-light">
                            <tr>
                                <th>
                                    Articulo
                                </th>
                                <th>
                                    Cantidad
                                </th>
                                <th>
                                    Precio
                                </th>
                                <th>
                                    Subtotal
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.VENTA_DETALLE)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ARTICULO.sdesc1_arti)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ncant_vedeta)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.npu_vedeta)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nsubt_vedeta)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->


