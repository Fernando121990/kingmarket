@model IEnumerable<MarketASP.Models.CLIENTE>

@{
    ViewBag.Title = "Clientes";
    ViewBag.pTitle = "Clientes";
    ViewBag.pageTitle = "Mantenimiento";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-success mb-2"><i class="mdi mdi-plus me-2"></i> Agregar Cliente</a>
                </div>
                <div class="table-responsive mt-3">
                    <table id="datatable" class="table table-centered datatable dt-responsive nowrap " style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-light">
                            <tr>
                                <th>Cod</th>
                                <th>
                                    Razón Social
                                </th>
                                <th>RUC</th>
                                <th>
                                    DNI/CE
                                </th>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    A.Paterno
                                </th>
                                <th>
                                    A.Materno
                                </th>
                                <th>
                                    Telf.
                                </th>
                                <th>
                                    Correo
                                </th>
                                <th>
                                    Web
                                </th>
                                <th>
                                    J/N
                                </th>
                                <th>
                                    Extranjero
                                </th>
                                <th>Zona</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ncode_cliente)
                                </td>
                                <td>
                                    @Html.ActionLink(item.srazon_cliente, "Details", new { id = item.ncode_cliente })

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sruc_cliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sdnice_cliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.snomb_cliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sappa_cliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sapma_cliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sfono1_cliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.smail_cliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sweb_cliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.stipo_cliente)
                                </td>
                                <td>
                                    <input type="checkbox" checked="@item.bprocedencia_cliente" readonly />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ZONA.sdesc_zona)
                                </td>
                                <td id="tooltip-container3">
                                    <a href="@Url.Action("Edit", new { id = item.ncode_cliente })" class="me-3 text-primary" data-bs-container="#tooltip-container3" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar"><i class="mdi mdi-pencil font-size-18"></i></a>
                                    <a href="@Url.Action("DeleteCliente", new { id = item.ncode_cliente })" class="text-danger" data-bs-container="#tooltip-container3" data-bs-toggle="tooltip" data-bs-placement="top" title="Eliminar"><i class="mdi mdi-trash-can font-size-18"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->