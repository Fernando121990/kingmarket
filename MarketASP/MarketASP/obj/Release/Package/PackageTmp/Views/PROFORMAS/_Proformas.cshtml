                    <td>
                        <input id="ndsctoaf_prof" name="ndsctoaf_prof" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="nsubaf_prof" name="nsubaf_prof" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="nigvaf_prof" name="nigvaf_prof" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="ntotaaf_prof" name="ntotaaf_prof" type="text" class="form-control" readonly />
                    </td>

                </tr>
            </tbody>
        </table>
    </div>
</div>