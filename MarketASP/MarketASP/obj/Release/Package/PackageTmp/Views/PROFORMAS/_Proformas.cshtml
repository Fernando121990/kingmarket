@model MarketASP.Models.PROFORMAS

<div>
    Precio de venta incluido IGV <input id="bprecioconigv" name="bprecioconigv" type="checkbox" @ViewBag.precioconigv disabled />
</div>

<div class="row">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9">
                        <div class="mb-3">
                            <label for="example-text-input" class="col-form-label">Cliente</label>
                            <input id="COD_CLIENTE" name="COD_CLIENTE" type="hidden" value="@ViewBag.cod_cliente" />
                            <input id="sdesc_cliente" name="sdesc_cliente" type="text" value="@ViewBag.sdesc_cliente" class="form-control" placeholder="Ingrese Cliente" autofocus />
                            @Html.ValidationMessageFor(model => model.ncode_cliente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-1">
                        <a href="@Url.Action("Create","Clientes")" class="btn btn-sm btn-success" target="_blank"><i class="fa fa-user"></i></a>
                    </div>
                    <div class="col-md-1">
                        <button id="btndireccion" type="button" class="btn btn-sm btn-success"><i class="fa fa-home"></i></button>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="example-text-input" class="col-form-label">Dirección</label>
                    <select id="NRO_DCLIENTE" name="NRO_DCLIENTE" class="form-control"></select>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.bclienteagretencion, "Es AG.Retencion", htmlAttributes: new { @class = "control-label" })
                        <div class="checkbox">
                            @Html.CheckBox("bclienteagretencion", htmlAttributes: new { @disabled = "disabled" })
                            @Html.ValidationMessageFor(model => model.bclienteagretencion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="sruc_cliente" class="col-form-label">RUC</label>
                            <input id="sruc" name="sruc" type="text" value="@ViewBag.sruc_cliente" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="sdni_cliente" class="col-form-label">DNI</label>
                            <div>
                                <input id="sdni_cliente" name="sdni_cliente" type="text" value="@ViewBag.sdni_cliente" class="form-control" placeholder="DNI" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.bflete_prof, "A.P.Flete", htmlAttributes: new { @class = "control-label" })
                        <div class="checkbox">
                            @Html.CheckBox("bflete_prof")
                            @Html.ValidationMessageFor(model => model.bflete_prof, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label for="ncode_alma" class="col-form-label">Almacen</label>
                            @Html.DropDownList("ncode_alma", null, htmlAttributes: new { @class = "form-select" })
                            @*@Html.DropDownList("ncode_alma", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })*@
                            @*@Html.HiddenFor(model => model.ncode_alma)*@
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3">
                        <label for="ncode_vende" class="col-form-label">vendedor</label>
                        @Html.DropDownList("ncode_vende", null, htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.ncode_vende, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    <label for="example-text-input" class="col-form-label">Documento</label>
                    @Html.DropDownList("ncode_docu", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ncode_docu, "", new { @class = "text-danger" })
                </div>
                <div class="row">
                    <div class="col-md-6">
                            <div class="mb-3">
                                <label for="sseri_prof" class="col-form-label">Serie</label>
                                @Html.DropDownList("sseri_prof", null, htmlAttributes: new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.sseri_prof, "", new { @class = "text-danger" })
                            </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="snume_prof" class="col-form-label">Número</label>
                            <div>
                                @Html.EditorFor(model => model.snume_prof, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.snume_prof, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="dfeprofo_prof" class="col-form-label">F.Emision</label>
                            <input id="dfeprofo_prof" name="dfeprofo_prof" type="text" value="@ViewBag.dfeprofo_prof" class="dfech form-control" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="dfevenci_prof" class="col-form-label">F.Venc</label>
                            <div>
                                <input id="dfevenci_prof" name="dfevenci_prof" type="text" value="@ViewBag.dfevenci_prof" class="dfech form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="dfdespacho_orpe" class="col-form-label">F.Despacho</label>
                            <div>
                                <input id="dfdespacho_orpe" name="dfdespacho_orpe" type="text" value="@ViewBag.dfdespacho_orpe" class="dfech form-control" />
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="nro_fopago" class="col-form-label">F.Pago</label>
                            <select id="nro_fopago" name="nro_fopago" class="form-control"></select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="smone_orpe" class="col-form-label">Moneda</label>
                            <div>
                                @Html.DropDownList("smone_prof", null, htmlAttributes: new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.smone_prof, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="ntc_orpe" class="col-form-label">T.C</label>
                            <div>
                                <input id="ntc_orpe" style="width:10em" name="ntc_prof" class="form-control" type="text" value="@ViewBag.tc" readonly />
                                @Html.ValidationMessageFor(model => model.ntc_prof, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="ncuotas_orpe" class="col-form-label">No Cuotas</label>
                            @Html.EditorFor(model => model.ncuotas_prof, new { htmlAttributes = new { @class = "form-control", @min = "0" } })
                            @Html.ValidationMessageFor(model => model.ncuotas_prof, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="ncuotadias_orpe" class="col-form-label">Dias</label>
                            @Html.EditorFor(model => model.ncuotadias_prof, new { htmlAttributes = new { @class = "form-control", @min = "0" } })
                            @Html.ValidationMessageFor(model => model.ncuotadias_prof, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="ncuotavalor_orpe" class="col-form-label">Valor Cuota</label>
                            @Html.EditorFor(model => model.ncuotavalor_prof, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.ncuotavalor_prof, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            <label for="sobse_venta" class="col-form-label">Observacion</label>
            @Html.EditorFor(model => model.sobse_prof, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.sobse_prof, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label for="sglosadespacho_orpe" class="col-form-label">Despacho</label>
            @Html.EditorFor(model => model.sglosadespacho_prof, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.sglosadespacho_prof, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <p>Productos</p>
    </div>
    <div class="col-lg-6">
        <button type="button" class="addMat fas fa-file btn btn-info" data-bs-toggle="modal" data-bs-target="#modalMat"></button>
        <button type="button" class="delMat fas fa-trash-alt btn btn-warning"></button>
        <div id="modalMat" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalMatlabel" aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 Class="modal-title" id="modalMatlabel">Seleccionar Articulo</h5>
                        <button id="btnmatcerrar" type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <table id="matetabla" class="table dt-responsive nowrap w-100" style="font-size: 12px">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Id</th>
                                    <th>Código</th>
                                    <th>Descripción</th>
                                    <th>Stock</th>
                                    <th>U.M</th>
                                    <th>Precio</th>
                                    <th>CodUM</th>
                                    <th>bafecto</th>
                                    <th>bisc</th>
                                    <th>bdscto</th>
                                    <th>bicbper</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div Class="modal-footer">
                        <button id="btncerrar" name="btncerrar" type="button" class="btn btn-light waves-effect" data-bs-dismiss="modal">Cerrar</button>
                        <button id="btnmate" name="btnmate" type="button" class="btn btn-primary waves-effect waves-light">Añadir</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <Table id="tbl" class="table table-striped table-responsive-lg" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th>CodArt</th>
                    <th>Codigo</th>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>UM</th>
                    <th>Precio</th>
                    <th>Precio</th>
                    <th>M</th>
                    <th>bafecto</th>
                    <th>bisc</th>
                    <th>bdscto</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model.PROFORMA_DETALLE)
                    {
                        var currentItem = item;
                        <tr>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ARTICULO.ncode_arti)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ARTICULO.scode_arti)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ARTICULO.sdesc1_arti)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ncant_profdeta)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ARTICULO.UMEDIDA.sdesc_umed)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.npu_profdeta)
                            </td>
                            <td></td>
                            <td></td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ARTICULO.bafecto_arti)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ARTICULO.bisc_arti)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ARTICULO.bdscto_arti)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.nsubt_profdeta)
                            </td>
                        </tr>

                    }
                }
            </tbody>
        </Table>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-responsive-lg">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th>T.Bruto</th>
                    <th>Dscto</th>
                    <th>SubTotal</th>
                    <th>IGV</th>
