@model MarketASP.Models.PROFORMAS

<div class="row">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9">
                        <div class="mb-3">
                            <label for="example-text-input" class="col-form-label">Cliente</label>
                            <input id="COD_CLIENTE" name="COD_CLIENTE" type="hidden" value="@ViewBag.cod_cliente" />
                            <input id="sdesc_cliente" name="sdesc_cliente" type="text" value="@ViewBag.sdesc_cliente" class="form-control" placeholder="Ingrese Cliente" autofocus />
                            @Html.ValidationMessageFor(model => model.ncode_cliente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <button type="button" class="addCliente fas fa-file btn btn-info" data-bs-toggle="modal" data-bs-target="#modalCliente"></button>
                            <div id="modalCliente" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalClientelabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg" role="document">
                                    <div Class="modal-content">
                                        <div Class="modal-header">
                                            <h5 Class="modal-title" id="modalClientelabel">Nuevo Cliente</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                        </div>
                                        <div Class="modal-body">
                                            <div class="form-group row">
                                                <div class="col-lg-12">
                                                    Persona Juridica
                                                    <input id="stipo_cliente" name="stipo_cliente" type="radio" value="J" checked="checked" />
                                                    Persona Natural
                                                    <input id="stipo_cliente" name="stipo_cliente" type="radio" value="N" />
                                                </div>
                                            </div>
                                            <div class="form-group row natural">
                                                <div class="col-lg-12">
                                                    <input id="snomb_cliente" name="snomb_cliente" type="text" class="form-control" maxlength="20" placeholder="Ingrese Nombres" />
                                                </div>
                                            </div>
                                            <div class="form-group row natural">
                                                <div class="col-lg-6">
                                                    <input id="sappa_cliente" name="sappa_cliente" type="text" class="form-control" maxlength="20" placeholder="Ingrese Paterno" />
                                                </div>
                                                <div class="col-lg-6">
                                                    <input id="sapma_cliente" name="sapma_cliente" type="text" class="form-control" maxlength="20" placeholder="Ingrese Materno" />
                                                </div>
                                            </div>
                                            <div class="form-group row juridica">
                                                <div class="col-lg-12">
                                                    <input id="srazon_cliente" name="srazon_cliente" type="text" class="form-control" placeholder="Ingrese Razon Social" />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-lg-6">
                                                    <input id="sruc_cliente" name="sruc_cliente" type="text" class="form-control" maxlength="11" placeholder="Ingrese RUC" />
                                                </div>
                                                <div class="col-lg-6">
                                                    <input id="sdnice_cliente" name="sdnice_cliente" type="text" class="form-control" maxlength="14" placeholder="Ingrese DNI" />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-lg-12">
                                                    <input id="sdire_cliente" name="sdire_cliente" type="text" class="form-control" placeholder="Ingrese Dirección" />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-lg-12">
                                                    <input id="scode_ubigeo" name="scode_ubigeo" type="hidden" />
                                                    <input id="subigeo" name="subigeo" type="text" class="form-control" placeholder="Ingrese Ubicación" />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-lg-6">
                                                    <input id="sfono1_cliente" name="sfono1_cliente" type="tel" class="form-control" placeholder="Ingrese Teléfono" />
                                                </div>
                                                <div class="col-lg-6">
                                                    <input id="smail_cliente" name="smail_cliente" type="email" class="form-control" placeholder="Ingrese Correo" />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-lg-6">
                                                    <input id="srepre_cliente" name="srepre_cliente" type="text" class="form-control" placeholder="Ingrese Contacto" />
                                                </div>
                                                <div class="col-lg-6">
                                                    <input id="sfono2_cliente" name="sfono2_cliente" type="tel" class="form-control" placeholder="Ingrese Teléfono" />
                                                </div>
                                            </div>
                                        </div>
                                        <div Class="modal-footer">
                                            <button id="btnCliCierre" name="btnCliCierre" type="button" class="btn btn-light waves-effect" data-bs-dismiss="modal">Cerrar</button>
                                            <button id="btnCliente" name="btnCliente" type="button" class="btn btn-primary waves-effect waves-light">Añadir</button>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="example-text-input" class="col-form-label">Dirección</label>
                    <select id="NRO_DCLIENTE" name="NRO_DCLIENTE" class="form-control"></select>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="sruc_cliente" class="col-form-label">RUC</label>
                            <input id="sruc" name="sruc" type="text" value="@ViewBag.sruc_cliente" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="sproforma_compra" class="col-form-label">DNI</label>
                            <div>
                                <input id="sdni_cliente" name="sdni_cliente" type="text" value="@ViewBag.sdni_cliente" class="form-control" placeholder="DNI" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    <label for="example-text-input" class="col-form-label">Documento</label>
                    @Html.DropDownList("ncode_docu", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ncode_docu, "", new { @class = "text-danger" })
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="sseri_prof" class="col-form-label">Serie</label>
                            @Html.EditorFor(model => model.sseri_prof, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.sseri_prof, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="snume_prof" class="col-form-label">Número</label>
                            <div>
                                @Html.EditorFor(model => model.snume_prof, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.snume_prof, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="dfeprofo_prof" class="col-form-label">F.Emision</label>
                            <input id="dfeprofo_prof" name="dfeprofo_prof" type="text" value="@ViewBag.dfeprofo_prof" class="dfech form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="dfevenci_prof" class="col-form-label">F.Venc</label>
                            <div>
                                <input id="dfevenci_prof" name="dfevenci_prof" type="text" value="@ViewBag.dfevenci_prof" class="dfech form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    <label for="ncode_alma" class="col-form-label">Almacen</label>
                    @Html.DropDownList("ncode_alma", null, htmlAttributes: new { @class = "form-control" })
                </div>
                        <div class="mb-3">
                            <label for="ncode_compra" class="col-form-label">O.C</label>
                            @Html.EditorFor(model => model.ncode_compra, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ncode_compra, "", new { @class = "text-danger" })
                        </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="ncode_fopago" class="col-form-label">F.Pago</label>
                            @Html.DropDownList("ncode_fopago", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ncode_fopago, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="smone_prof" class="col-form-label">Moneda</label>
                            <div>
                                @Html.DropDownList("smone_prof", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.smone_prof, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="ntc_prof" class="col-form-label">T.C</label>
                            <div>
                                <input id="ntc_prof" style="width:10em" name="ntc_prof" class="form-control" type="text" value="@ViewBag.tc" readonly />
                                @Html.ValidationMessageFor(model => model.ntc_prof, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                </div>
                <div class="mb-3">
                    <label for="sobse_venta" class="col-form-label">Observacion</label>
                    @Html.TextAreaFor(model => model.sobse_prof, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.sobse_prof, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <p>Productos</p>
    </div>
    <div class="col-lg-6">
        <button type="button" class="addMat fas fa-file btn btn-info" data-bs-toggle="modal" data-bs-target="#modalMat"></button>
        <button type="button" class="delMat fas fa-trash-alt btn btn-warning"></button>
        <div id="modalMat" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalMatlabel" aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 Class="modal-title" id="modalMatlabel">Seleccionar Articulo</h5>
                        <button id="btnmatcerrar" type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <table id="matetabla" class="table dt-responsive nowrap w-100" style="font-size: 12px">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Id</th>
                                    <th>Código</th>
                                    <th>Descripción</th>
                                    <th>Stock</th>
                                    <th>U.M</th>
                                    <th>Precio</th>
                                    <th>CodUM</th>
                                    <th>bafecto</th>
                                    <th>bisc</th>
                                    <th>bdscto</th>
                                    <th>bicbper</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div Class="modal-footer">
                        <button id="btncerrar" name="btncerrar" type="button" class="btn btn-light waves-effect" data-bs-dismiss="modal">Cerrar</button>
                        <button id="btnmate" name="btnmate" type="button" class="btn btn-primary waves-effect waves-light">Añadir</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <Table id="tbl" class="table table-striped table-responsive-lg" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th>CodArt</th>
                    <th>Codigo</th>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>UM</th>
                    <th>Precio</th>
                    <th>Precio</th>
                    <th>M</th>
                    <th>bafecto</th>
                    <th>bisc</th>
                    <th>bdscto</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model.PROFORMA_DETALLE)
                    {
                        var currentItem = item;
                        <tr>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ARTICULO.ncode_arti)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ARTICULO.scode_arti)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ARTICULO.sdesc1_arti)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ncant_profdeta)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ARTICULO.UMEDIDA.sdesc_umed)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.npu_profdeta)
                            </td>
                            <td></td>
                            <td></td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ARTICULO.bafecto_arti)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ARTICULO.bisc_arti)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.ARTICULO.bdscto_arti)
                            </td>
                            <td>
                                @Html.DisplayTextFor(x => currentItem.nsubt_profdeta)
                            </td>
                        </tr>

                    }
                }
            </tbody>
        </Table>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-responsive-lg">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th>T.Bruto</th>
                    <th>Dscto</th>
                    <th>SubTotal</th>
                    <th>IGV</th>
                    <th>Total</th>
                    <th>Total-Total</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Exonerado</td>
                    <td>
                        <input id="nbrutoex_prof" name="nbrutoex_prof" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="ndctoex_prof" name="ndctoex_prof" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="nsubex_prof" name="nsubex_prof" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="nigvex_prof" name="nigvex_prof" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="ntotaex_prof" name="ntotaex_prof" type="text" class="form-control" readonly />
                    </td>
                    <td rowspan="2">
                        <input id="ntotal_prof" name="ntotal_prof" type="text" class="form-control" readonly />
                    </td>
                </tr>
                <tr>
                    <td>Afecto</td>
                    <td>
                        <input id="nbrutoaf_prof" name="nbrutoaf_prof" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="ndsctoaf_prof" name="ndsctoaf_prof" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="nsubaf_prof" name="nsubaf_prof" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="nigvaf_prof" name="nigvaf_prof" type="text" class="form-control" readonly />
                    </td>
                    <td>
                        <input id="ntotaaf_prof" name="ntotaaf_prof" type="text" class="form-control" readonly />
                    </td>

                </tr>
            </tbody>
        </table>
    </div>
</div>