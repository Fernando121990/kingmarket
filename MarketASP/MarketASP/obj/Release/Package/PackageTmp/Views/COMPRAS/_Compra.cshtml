                    <input id="xcodearti" name="xcodearti" type="hidden" class="form-control" />
                    <input id="xund" name="xund" type="hidden" class="form-control" />

                    <div class=" row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="xcodelocal" class="col-form-label">Codigo</label>
                                <input id="xcodelocal" name="xcodelocal" type="text" value="0" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="xdescarti" class="col-form-label">Articulo</label>
                                <input id="xdescarti" name="xdescarti" type="text" value="-" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="xdescarti" class="col-form-label">Ctdad</label>
                                <input id="xcontrol" name="xcontrol" type="text" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="dfvenci_lote" class="col-form-label">Fecha</label>
                                <input id="dfvenci_lote" name="dfvenci_lote" type="text" class="dfech form-control" value="@string.Format("{0:d}",DateTime.Today)"/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="sdesc_lote" class="col-form-label">Lote</label>
                                <input id="sdesc_lote" name="sdesc_lote" type="text" class="form-control" autofocus />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label for="ncant_lote" class="col-form-label">Ctdad</label>
                                <input id="ncant_lote" name="ncant_lote" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btncerrarL" name="btncerrarL" type="button" class="btn btn-light waves-effect" data-bs-dismiss="modal">Cerrar</button>
                    <button id="btnLote" name="btnLote" type="button" class="btn btn-primary waves-effect waves-light">Añadir</button>
                </div>
            </div>
        </div>
    </div>
</div>

