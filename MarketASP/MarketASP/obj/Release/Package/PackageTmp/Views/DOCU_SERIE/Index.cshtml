@model IEnumerable<MarketASP.Models.DOCU_SERIE>

@{
    ViewBag.Title = "Serie";
    ViewBag.pTitle = "Serie";
    ViewBag.pageTitle = "Maestros";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-success mb-2"><i class="mdi mdi-plus me-2"></i> Agregar Compra</a>
                </div>
                <div class="table-responsive mt-3">
                    <table id="datatable" class="table table-centered datatable dt-responsive nowrap" 
                           style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-light">
                            <tr>
                                <th>
                                    Local
                                </th>
                                <th>Usuario</th>
                                <th>
                                    Documento
                                </th>
                                <th>Serie</th>
                                <th>
                                    Numeración
                                </th>
                                <th></th>
                            </tr>
                            </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(l => l.ncode_local))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LOCAL.sdesc_local)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.susuario_dose)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CONFIGURACION.sdesc_confi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sserie_dose)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.snumeracion_dose)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = item.ncode_dose })" class="me-3 text-primary" data-bs-container="#tooltip-container3" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar"><i class="mdi mdi-pencil font-size-18"></i></a>
                                        <a href="@Url.Action("DeleteDocSerie", new { id = item.ncode_dose })" class="text-danger" data-bs-container="#tooltip-container3" data-bs-toggle="tooltip" data-bs-placement="top" title="Eliminar"><i class="mdi mdi-trash-can font-size-18"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->