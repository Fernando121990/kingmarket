@model MarketASP.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrar Cuenta";
}
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="row">
        <h5>@ViewBag.Title.</h5>
    </div>
    <hr />
    <div class="form-group row">
        @Html.LabelFor(m => m.Nombre, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", autofocus = "autofocus" })
        </div>
        @Html.LabelFor(m => m.Apellido, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("user Role", new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, " ")
        </div>
        @Html.LabelFor(m => m.Local, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.DropDownList("Local")
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group row">
        <div class="col-lg-12">
            <input type="submit" class="btn btn-block btn-success" value="Registrarse" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
