@model MarketASP.Areas.Administracion.Models.SUCURSAL

@{
    ViewBag.Title = "Registrar Sucursal";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        <div class="col-md-12">
            <h5 class="text-center">@ViewBag.Title</h5>
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.sdesc_sucu, "Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.sdesc_sucu, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.sdesc_sucu, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.bacti_sucu, "Activo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            <div class="checkbox">
                @Html.EditorFor(model => model.bacti_sucu)
                @Html.ValidationMessageFor(model => model.bacti_sucu, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col m-2">
            <button type="submit" class="btn btn-success btn-block">Registrar</button>
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink(" ", "Index", new { }, new { @class = "btn btn-primary fas fa-hand-point-left", title = "Listado" })
</div>

