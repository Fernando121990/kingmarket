@model MarketASP.Areas.Administracion.Models.DOCU_SERIE

@{
    ViewBag.Title = "Registrar Series x Local";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        <div class="col-md-12">
            <h4 class="text-center">@ViewBag.Title</h4>
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.ncode_local, "Local", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.DropDownList("ncode_local", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ncode_local, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.susuario_dose, "Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.DropDownList("susuario_dose", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.susuario_dose, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.ncode_docu, "Documento", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.DropDownList("ncode_docu", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ncode_docu, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.snumeracion_dose, "Numeración", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.snumeracion_dose, new { htmlAttributes = new { @class = "form-control", placeholder = "formato S0000000N" } })
            @Html.ValidationMessageFor(model => model.snumeracion_dose, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col m-2">
            <input type="submit" value="Registrar" class="btn btn-block btn-success" />
        </div>
    </div>

</div>
}
<div>
    @Html.ActionLink(" ", "Index", new { }, new { @class = "btn btn-primary fas fa-hand-point-left", title = "Listado" })
</div>
