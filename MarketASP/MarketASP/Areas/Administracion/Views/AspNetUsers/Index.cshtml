@model IEnumerable<MarketASP.Areas.Administracion.Models.AspNetUsers>

@{
    ViewBag.Title = "Usuarios";
}

<<div class="row ptp-titulos">
    <div class="col-md-6 col-sm-6">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="col-md-6 col-sm-6">
        @Html.ActionLink(" ", "Register","Account",new { area = "" }, new { @class = "btn btn-primary glyphicon glyphicon-file", title = "Añadir Usuario" })
    </div>
</div>
<table class="table">
    <tr>
        <th>
            Usuario
        </th>
        <th>
            Correo
        </th>
        <th>
            Nombres y Apellidos
        </th>
        <th>Local</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @string.Format("{0}" + " " + "{1}",item.Nombre,item.Apellido)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.Id}, new { @class = "btn btn-primary btn-sm glyphicon glyphicon-pencil", title = "Editar" })
            @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm glyphicon glyphicon-trash", title = "Eliminar"})
        </td>
    </tr>
}

</table>
