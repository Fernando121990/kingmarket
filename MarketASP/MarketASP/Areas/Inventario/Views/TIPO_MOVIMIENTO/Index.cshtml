@model IEnumerable<MarketASP.Models.TIPO_MOVIMIENTO>

@{
    ViewBag.Title = "Tipo de Movimiento";
}
<div class="row" style="margin-top:5px">
    <div class="col-md-6 col-sm-6">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="col-md-6 col-sm-6">
        @Html.ActionLink(" ", "Create", new { }, new { @class = "btn btn-primary glyphicon glyphicon-file", title = "Añadir Tipo de Movimiento" })
    </div>
</div>

<table class="table">
    <tr>
        <th>
            <label>Descripción</label>
        </th>
        <th>
            <label>Tipo</label>
        </th>
        <th>
            <label>Es Entrada</label>
        </th>
        <th>
            <label>Tranferira</label>
        </th>
        <th>
            <label>Activo</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.sdesc_timovi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.stipo_timovi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.binout_tipomovi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.btransf_tipomovi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.besta_tipomovi)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.ncode_timovi }, new { @class = "btn btn-primary btn-sm glyphicon glyphicon-pencil", title = "Editar" })
            @Html.ActionLink(" ", "DeleteTipoMov", new { id = item.ncode_timovi }, new { @class = "btn btn-danger btn-sm glyphicon glyphicon-trash", title = "Eliminar", onclick = "return confirm('¿ Seguro de eliminar registro ?');" })
        </td>
    </tr>
    }

</table>
