@model MarketASP.Models.ALMACEN

@{
    ViewBag.Title = "Actualizar Almacen";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ncode_alma)
        <div class="row">
            <div class="col-md-12">
                <h5 class="text-center">@ViewBag.Title</h5>
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.sdesc_alma, "Descipción", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.sdesc_alma, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sdesc_alma, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.besta_alma, "Activo", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-1">
                <div class="checkbox">
                    @Html.EditorFor(model => model.besta_alma)
                    @Html.ValidationMessageFor(model => model.besta_alma, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col m-2">
                <input type="submit" value="Actualizar" class="btn btn-block btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(" ", "Index", new { }, new { @class = "btn btn-primary fas fa-hand-point-left", title = "Listado" })
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
