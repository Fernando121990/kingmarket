@model MarketASP.Clases.permisoView

@{
    ViewBag.Title = "Permisos";
    ViewBag.pTitle = "Permisos";
    ViewBag.pageTitle = "Configuración";
}

@{

    using (Html.BeginForm("Create", "Permisoes", null, FormMethod.Get))
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                          <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Usuario</span>
                            </div>
                            @Html.DropDownList("username")
                            <div class="input-group-append">
                                <button class="btn btn-success" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <table class="table table-striped table-responsive-lg">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th>Nivel</th>
                    <th>Menu</th>
                    <th>Operacion</th>
                </tr>
            </thead>
            <tbody>
                @Html.EditorFor(p => p.detalle)
            </tbody>
        </table>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary me-2 waves-effect waves-light">Guardar Cambios</button>
        </div>
    </div>
}


