@model IEnumerable<MarketASP.Models.TIPO_GUIA>

@{
    ViewBag.Title = "Tipo de Movimiento";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h5 class="h5 mb-0 text-gray-800">@ViewBag.Title</h5>
    <a href="@Url.Action("Create")" class="btn btn-primary btn-circle btn-sm" title="Añadir">
        <i class="fas fa-file"></i>
    </a>
</div>

<table class="table table-striped table-responsive-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                <label>Descripción</label>
            </th>
            <th>
                <label>Tipo</label>
            </th>
            <th>
                <label>Es Entrada</label>
            </th>
            <th>
                <label>Tranferira</label>
            </th>
            <th>
                <label>Activo</label>
            </th>
            <th></th>
        </tr>
</thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.sdesc_tiguia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.stipo_tiguia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.binout_tiguia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.btransf_tiguia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.besta_tiguia)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ncode_tiguia })" class="btn btn-success btn-circle btn-sm" title="Edita">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="@Url.Action("DeleteTipoMov", new { id = item.ncode_tiguia })" class="btn btn-danger btn-circle btn-sm" title="Eliminar" onclick="return confirm('¿ Seguro de eliminar registro ?');">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
