@model IEnumerable<MarketASP.Models.MOVIMIENTO>

@{
    ViewBag.Title = "Movimientos";
    ViewBag.pTitle = "Movimientos";
    ViewBag.pageTitle = "Inventario";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-success mb-2"><i class="mdi mdi-plus me-2"></i> Agregar Movimiento</a>
                </div>
                <div class="table-responsive mt-3">
                    <table id="datatable" class="table table-centered datatable dt-responsive nowrap " style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-light">
                            <tr>
                                <th>
                                    <label>Serie</label>
                                </th>
                                <th>
                                    <label>Número</label>
                                </th>
                                <th>
                                    <label>Fecha</label>
                                </th>
                                <th>
                                    <label>Almacen</label>
                                </th>
                                <th>
                                    <label>Destino</label>
                                </th>
                                <th>
                                    Tipo
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sserie_movi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.snume_movi)
                                    </td>
                                    <td>
                                        @string.Format("{0:d}", item.dfemov_movi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ALMACEN.sdesc_alma)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ALMACEN1.sdesc_alma)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TIPO_MOVIMIENTO.sdesc_timovi)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = item.ncode_movi })" class="btn btn-success btn-circle btn-sm" title="Edita">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("DeleteMovi", new { id = item.ncode_movi })" class="btn btn-danger btn-circle btn-sm" title="Eliminar" onclick="return confirm('¿ Seguro de eliminar registro ?');">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->