@model MarketASP.Models.Receta

@{
    ViewBag.Title = "Agregar receta";
    ViewBag.pTitle = "Agregar receta";
    ViewBag.pageTitle = "Produccion";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <input id="cnfdeci" name="cnfdeci" type="hidden" value="@ViewBag.deci" />
                    <input id="cnfigv" name="cnfigv" type="hidden" value="@ViewBag.igv" />
                    <input id="cnficbper" name="cnficbper" type="hidden" value="@ViewBag.icbper" />
                    <div class="form-horizontal">


                        @Html.Partial("_receta")

                    </div>
                }
                <div>
                    @Html.ActionLink(" ", "Index", new { }, new { @class = "btn btn-primary fas fa-hand-point-left", title = "Listado" })
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/receta")
    <script type="text/javascript">
    var urlArticulos = '@Url.Action("getArticulos", "Funciones",new { area = ""})';
    var urlKardex = '@Url.Action("getKardex", "Funciones",new { area = ""})';
    var urlEditar = '@Url.Action("fncadenaeditar", "Funciones", new { area = "" })';
    var urlrecetaCrea = '@Url.Action("Create", "recetas")';
    var urlrecetaLista = '@Url.Action("Index", "recetas")';
    </script>
}
