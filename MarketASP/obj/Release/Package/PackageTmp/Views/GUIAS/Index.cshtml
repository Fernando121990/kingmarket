@model IEnumerable<MarketASP.Models.Pr_GUIAListado_Result>

@{
    ViewBag.Title = "Consultar";
    ViewBag.pTitle = "Consultar";
    ViewBag.pageTitle = "Orden de Compra";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {

                    <div class="row">
                        <div class="col-md-4">
                            <a href="@Url.Action("Create")" class="btn btn-success mb-2"><i class="mdi mdi-plus me-2"></i> Agregar Guia</a>
                        </div>
                        <div class="col-md-1">
                            <label for="example-text-input" class="col-form-label">Inicio</label>
                            <input id="fini" name="fini" class="dfech form-control" type="text" value="@ViewBag.fini" />
                        </div>
                        <div class="col-md-1">
                            <label for="example-text-input" class="col-form-label">Fin</label>
                            <input id="ffin" name="ffin" class="dfech form-control" type="text" value="@ViewBag.ffin" />
                        </div>
                        <div class="col-md-1 mb-2">
                            <input id="chkpendiente" name="chkpendiente" type="checkbox" value="1" @ViewBag.chkpendiente /> Pendiente<br />
                            <input id="chkparcial" name="chkparcial" type="checkbox" value="1" @ViewBag.chkparcial /> Parcial<br />
                            <input id="chktotal" name="chktotal" type="checkbox" value="1" @ViewBag.chktotal /> Total<br />
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-info mb-2" type="submit" title="Buscar">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>

                    </div>
                }
                <br />

                <div class="table-responsive mt-3">
                    <table id="datatable" class="table table-centered datatable dt-responsive nowrap" data-bs-page-length="5" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-light">
                            <tr>
                                <th>Tipo</th>
                                <th>Documento</th>
                                <th>Fecha</th>
                                <th>Total</th>
                                <th>Almacen</th>
                                <th>vendedor</th>
                                <th>Cliente</th>
                                <th>O.Pedido</th>
                                <th>No Venta</th>
                                <th>condicion</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sdesc_confi)
                                    </td>
                                    <td>
                                        @Html.ActionLink(item.Documento, "Details", new { id = item.ncode_guia })

                                    </td>
                                    <td>
                                        @string.Format("{0:d}", item.Fecha)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.total)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sdesc_alma)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sdesc_vende)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.srazon_cliente)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrdenPedido)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sserienume_venta)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.condicion)
                                    </td>
                                    <td>
                                        @if (item.bventaasociada_guia == false)
                                        {

                                            if (item.besta_guia == true)
                                            {
                                                <a href="@Url.Action("Edit", new { id = item.ncode_guia })" class="btn btn-success btn-circle btn-sm" title="Edita">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("anulaGuia", new { id = item.ncode_guia })" class="btn btn-primary btn-circle btn-sm" title="Anular">
                                                    <i class="fas fa-circle-notch"></i>
                                                </a>

                                                <a href="@Url.Action("Deleteguia", new { id = item.ncode_guia })" class="btn btn-danger btn-circle btn-sm" title="Eliminar" onclick="return confirm('¿ Seguro de eliminar registro ?');">
                                                    <i class="fas fa-trash"></i>
                                                </a>

                                            }

                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->