@model MarketASP.Models.ART_BARRA

@{
    ViewBag.Title = "Crear Cod.Barra";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h5 class="font-weight-bold">@ViewBag.Title</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="ncode_arti" id="ncode_arti" value="@ViewBag.ncode_arti" />

        <div class="form-group row">
            @Html.LabelFor(model => model.sdesc_barra, "Cod.Barra", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sdesc_barra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sdesc_barra, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col m-2">
                <input type="submit" value="Añadir" class="btn btn-block btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(" ", "Details", new { id = @ViewBag.ncode_arti }, new { @class = "btn btn-primary fas fa-hand-point-left", title = "Lista de Articulos" })
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


