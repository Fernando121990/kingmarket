@model IEnumerable<MarketASP.Models.SUCURSAL>

@{
    ViewBag.Title = "Sucursales";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h5 class="h5 mb-0 text-gray-800">@ViewBag.Title</h5>
    <a href="@Url.Action("Create")" class="btn btn-primary btn-circle btn-sm" title="Añadir Sucursal">
        <i class="fas fa-file"></i>
    </a>
</div>

<table class="table table-striped table-responsive-lg">
    <thead class="thead-dark">
        <tr>
            <th>
                Razon Social
            </th>
            <th>RUC</th>
            <th>
                Activa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sdesc_sucu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sruc_sucu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bacti_sucu)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.ncode_sucu })" class="btn btn-success btn-circle btn-sm" title="Edita">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="@Url.Action("DeleteSucu", new { id = item.ncode_sucu })" class="btn btn-danger btn-circle btn-sm" title="Eliminar" onclick="return confirm('¿ Seguro de eliminar registro ?');">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
