@model MarketASP.Models.VENDEDOR

<div class="row">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    <label for="example-text-input" class="col-form-label">Nombres</label>
                    @Html.EditorFor(model => model.sdesc_vende, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.sdesc_vende, "", new { @class = "text-danger" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(model => model.nesta_vende, "Activo", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="checkbox">
                        @Html.CheckBox("nesta_vende")
                        @Html.ValidationMessageFor(model => model.nesta_vende, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                @Html.LabelFor(model => model.ncode_zona, "Zona", htmlAttributes: new { @class = "control-label col-md-2" })
                @*@Html.DropDownList("ncode_zona", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.DropDownList("zonas", ViewBag.ncode_zona as MultiSelectList, htmlAttributes: new { @class = "select2 form-control select2-multiple", @multiple = "multiple" })

                @Html.LabelFor(model => model.ncode_alma, "Almacen", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("ncode_alma", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ncode_alma, "", new { @class = "text-danger" })

            </div>

        </div>
    </div>
</div>

<div class="text-center mt-4">
    <button type="submit" class="btn btn-primary me-2 waves-effect waves-light">Guardar Cambios</button>
</div>


