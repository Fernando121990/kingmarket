@model IEnumerable<MarketASP.Models.Pr_KardexLotesMovimientos_Result>

@{
    ViewBag.Title = "Lotes";
    ViewBag.pTitle = "Lotes";
    ViewBag.pageTitle = "Almacen";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive mt-3">
                    <table id="datatable" class="table table-centered datatable dt-responsive nowrap " style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-light">
                            <tr>
                                <th>
                                    Lote
                                </th>
                                <th>
                                    F.Venc
                                </th>
                                <th>
                                    Articulo
                                </th>
                                <th>
                                    Ctdad
                                </th>
                                @*<th>
                                    Ctdad Desp
                                </th>*@
                                <th>
                                    Ctdad Dispo
                                </th>
                                <th>
                                    Activo
                                </th>
                                <th>Modulo</th>
                                <th>Documento</th>
                                <th>Proveedor</th>

                            </tr>
                            </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sdesc_lote)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.fvence)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sdesc1_arti)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ncant_lote)
                                </td>
                                @*<td>
            @Html.DisplayFor(modelItem => item.ncantdespachada_lote)
        </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.ncantrestante_lote)
                                </td>
                                <td>
                                    @if (item.besta_lote == false)
                                    {
                                        <div class="badge badge-soft-warning font-size-12">No</div>
                                    }
                                    else
                                    {
                                        <div class="badge badge-soft-success font-size-12">Si</div>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.smodulo_confi)
                                </td>
                                <td>
                                    @string.Concat(item.sserie_lote, "-", item.snume_lote)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.solicitante)
                                </td>

                                @*<td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ncode_lote }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ncode_lote })
        </td>*@
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->