@model IEnumerable<MarketASP.Models.MOVIMIENTO>

@{
    ViewBag.Title = "Lista de Movimientos";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h5 class="h5 mb-0 text-gray-800">@ViewBag.Title</h5>
    <a href="@Url.Action("Create")" class="btn btn-primary btn-circle btn-sm" title="Añadir">
        <i class="fas fa-file"></i>
    </a>
</div>

<table class="table table-striped table-responsive-sm">
    <thead class="thead-dark">
            <tr>
                <th>
                    <label>Serie</label>
                </th>
                <th>
                    <label>Número</label>
                </th>
                <th>
                    <label>Fecha</label>
                </th>
                <th>
                    <label>Moneda</label>
                </th>
                <th>
                    <label>TC</label>
                </th>
                <th>
                    <label>Activo</label>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.stipo_movi)
                </th>
                <th>
                    <label>Almacen</label>
                </th>
                <th>
                    <label>Destino</label>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TIPO_MOVIMIENTO.sdesc_timovi)
                </th>
                <th></th>
            </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.sserie_movi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.snume_movi)
                </td>
                <td>
                    @string.Format("{0:d}", item.dfemov_movi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.smone_movi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ntc_movi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.besta_movi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.stipo_movi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ALMACEN.sdesc_alma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ALMACEN1.sdesc_alma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TIPO_MOVIMIENTO.sdesc_timovi)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ncode_movi })" class="btn btn-success btn-circle btn-sm" title="Edita">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="@Url.Action("DeleteMovi", new { id = item.ncode_movi })" class="btn btn-danger btn-circle btn-sm" title="Eliminar" onclick="return confirm('¿ Seguro de eliminar registro ?');">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
   </table>
