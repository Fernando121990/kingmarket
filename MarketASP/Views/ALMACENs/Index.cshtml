@model IEnumerable<MarketASP.Models.ALMACEN>

@{
    ViewBag.Title = "Almacen";
    ViewBag.pTitle = "Almacen";
    ViewBag.pageTitle = "Mantenimiento";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-success mb-2"><i class="mdi mdi-plus me-2"></i> Agregar Almacen</a>
                </div>
                <div class="table-responsive mt-3">
                    <table id="datatable" class="table table-centered datatable dt-responsive nowrap " style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-light">
                            <tr>
                                <th>Cod</th>
                                <th>
                                    <label>Descripción</label>
                                </th>
                                <th>
                                    <label>Activo</label>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sabr_alma)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sdesc_alma)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.besta_alma)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.ncode_alma })" class="btn btn-success btn-circle btn-sm" title="Edita">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("DeleteAlma", new { id = item.ncode_alma })" class="btn btn-danger btn-circle btn-sm" title="Eliminar" onclick="return confirm('¿ Seguro de eliminar registro ?');">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->