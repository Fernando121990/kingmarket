@model MarketASP.Models.Fabricacion
@{
    ViewBag.Title = "Actualizar Receta";
    ViewBag.pTitle = "Actualizar Receta";
    ViewBag.pageTitle = "Produccion";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Fab_Codigo)
                    <input id="cnfdeci" name="cnfdeci" type="hidden" value="@ViewBag.deci" />
                    <input id="cnfigv" name="cnfigv" type="hidden" value="@ViewBag.igv" />
                    <input id="cnficbper" name="cnficbper" type="hidden" value="@ViewBag.icbper" />

                    <div class="form-horizontal">


                        @Html.Partial("_fabricacion")

                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/fabricacion")
<script type="text/javascript">
    var urlArticulos = '@Url.Action("getArticulos", "Funciones",new { area = ""})';
    var urlKardex = '@Url.Action("getKardex", "Funciones",new { area = ""})';
    var urlEditar = '@Url.Action("fncadenaeditar", "Funciones", new { area = "" })';
    var urlfabricacionCrea = '@Url.Action("Edit", "fabricacions")';
    var urlfabricacionLista = '@Url.Action("Index", "fabricacions")';
    var urlGetreceta = '@Url.Action("getReceta", "Funciones",new { area = ""})';

</script>
}
}
