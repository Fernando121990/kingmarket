@model MarketASP.Models.ARTICULO

@{
    ViewBag.Title = "Editar Articulo";
    ViewBag.pTitle = "Editar Articulo";
    ViewBag.pageTitle = "Mantenimiento";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ncode_arti)
                    @Html.HiddenFor(model => model.nprecio_arti)
                    @Html.HiddenFor(model => model.ncosto_arti)
                    @Html.HiddenFor(model => model.nultcosto_arti)


                    @Html.Partial("_Articulo")

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary me-2 waves-effect waves-light">Guardar Cambios</button>
                    </div>

                </div>
                }

                <div>
                    @Html.ActionLink(" ", "Index", new { }, new { @class = "btn btn-primary fas fa-hand-point-left", title = "Lista de Articulos" })
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
