@model IEnumerable<MarketASP.Models.Pr_Reporte_Articulos_Result>

@{
    ViewBag.Title = "Reporte de Productos";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h5 class="h3 mb-0 text-gray-800">@ViewBag.Title</h5>
</div>

<table class="table tblGralExporta" style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th>Codigo</th>
            <th>Descripción</th>
            <th>Familia</th>
            <th>Subfamilia</th>
            <th>Marca</th>
            <th>U.Negocio</th>
            <th>U.Negocio 2</th>
            <th>Especie</th>
            <th>Precio</th>
            <th>Stock</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.scode_arti)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sdesc1_arti)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sdesc_fami)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sdesc_clase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sdesc_marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sdesc_linea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sdesc_sublinea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.especie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stock)
            </td>
        </tr>
        }
    </tbody>
</table>

