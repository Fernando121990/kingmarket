@model IEnumerable<MarketASP.Models.AspNetUsers>

@{
    ViewBag.Title = "Usuarios";
    ViewBag.pTitle = "Usuarios";
    ViewBag.pageTitle = "Mantenimiento";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <a href="@Url.Action("Register", "Account", new { area = "" })" class="btn btn-success mb-2"><i class="mdi mdi-plus me-2"></i> Agregar Usuario</a>
                </div>
                <div class="table-responsive mt-3">
                    <table id="datatable" class="table table-centered datatable dt-responsive nowrap " style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-light">
                            <tr>
                                <th>
                                    Usuario
                                </th>
                                <th>
                                    Correo
                                </th>
                                <th>
                                    Nombres y Apellidos
                                </th>
                                <th>Local</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @string.Format("{0}" + " " + "{1}", item.Nombre, item.Apellido)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-success btn-circle btn-sm" title="Edita">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-circle btn-sm" title="Eliminar" onclick="return confirm('¿ Seguro de eliminar registro ?');">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->