@model IEnumerable<MarketASP.Models.Ventana>

@{
    ViewBag.Title = "Menues y Operaciones";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h5 class="h5 mb-0 text-gray-800">@ViewBag.Title</h5>
    <a href="@Url.Action("Create")" class="btn btn-primary btn-circle btn-sm" title="Añadir Menu">
        <i class="fas fa-file"></i>
    </a>
</div>

<table class="table table-striped table-responsive-sm">
    <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nivel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Menu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Operacion)
                </th>
                <th></th>
            </tr>
</thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nivel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Menu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Operacion)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Nivel })" class="btn btn-success btn-circle btn-sm" title="Edita">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="@Url.Action("DeleteNivel", new { id = item.Nivel })" class="btn btn-danger btn-circle btn-sm" title="Eliminar" onclick="return confirm('¿ Seguro de eliminar registro ?');">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
        </table>
