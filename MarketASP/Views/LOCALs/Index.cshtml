@model IEnumerable<MarketASP.Models.LOCAL>

@{
    ViewBag.Title = "Locales";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h5 class="h5 mb-0 text-gray-800">@ViewBag.Title</h5>
    <a href="@Url.Action("Create")" class="btn btn-primary btn-circle btn-sm" title="Añadir Local">
        <i class="fas fa-file"></i>
    </a>
</div>

<table class="table table-striped table-responsive-lg">
    <thead class="thead-dark">
            <tr>
                <th>
                    Sucursal
                </th>
                <th>
                    Local
                </th>
                <th>Direccion</th>
                <th>Ubigeo</th>
                <th>
                    Activo
                </th>
                <th></th>
            </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SUCURSAL.sdesc_sucu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sdesc_local)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sdire_local)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.scode_ubigeo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bacti_local)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.ncode_local})" class="btn btn-success btn-circle btn-sm" title="Edita">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="@Url.Action("DeleteLocal", new { id = item.ncode_local })" class="btn btn-danger btn-circle btn-sm" title="Eliminar" onclick="return confirm('¿ Seguro de eliminar registro ?');">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
        </table>
