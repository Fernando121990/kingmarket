@model MarketASP.Models.SUBESPECIE

<div class="row">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <label for="example-text-input" class="col-form-label">Subespecie</label>
                @Html.EditorFor(model => model.sdesc_subesp, new { htmlAttributes = new { @class = "form-control", @autofocus = "autofocus" } })
                @Html.ValidationMessageFor(model => model.sdesc_subesp, "", new { @class = "text-danger" })
                <label for="example-text-input" class="col-form-label">Activo</label>
                @Html.CheckBox("nesta_subesp")
                @Html.ValidationMessageFor(model => model.nesta_subesp, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <label for="example-text-input" class="col-form-label">Especie</label>
                @Html.DropDownList("ncode_espe", null, "", htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <button type="submit" class="btn btn-primary me-2 waves-effect waves-light">Guardar Cambios</button>
</div>


