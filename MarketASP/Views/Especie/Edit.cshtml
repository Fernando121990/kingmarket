@model MarketASP.Models.ESPECIE

@{
    ViewBag.Title = "Editar Especie";
    ViewBag.pTitle = "Editar Especie";
    ViewBag.pageTitle = "Mantenimiento";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ncode_espe)
                    <div class=" mb-3 row">
                        @Html.LabelFor(model => model.sdesc_espe, "Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.sdesc_espe, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.sdesc_espe, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="mb-3 form-group row">
                        @Html.LabelFor(model => model.nesta_espe, "Activo", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.CheckBox("nesta_espe")
                                @Html.ValidationMessageFor(model => model.nesta_espe, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary me-2 waves-effect waves-light">Guardar Cambios</button>
                    </div>
                </div>
                }

                <div>
                    @Html.ActionLink(" ", "Index", new { }, new { @class = "btn btn-primary fas fa-hand-point-left", title = "Lista de espelias" })
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
